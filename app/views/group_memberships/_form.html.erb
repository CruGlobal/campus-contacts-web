<div id="member_search_div" style="display:none;" class="custom_mh_popup_box">
  <div class="ui-widget-overlay pop_box_overlay_container">&nbsp;</div>
  <div class="pop_box_container">
    <div class="mh_popup_box">
    	<div class="mh_popup_box_top">
        <span class="mh_popup_heading" id="member_search_title">&nbsp;</span>
      </div>
      <div class="mh_popup_box_content">
        <div class="fancy">
          <%= t('group_memberships.form.start_typing') %>
          <br/>
        	<%= hidden_field_tag :add_to_group_id, params[:id] %>

          <%= form_tag search_group_group_memberships_path(@group), :id => 'member_search_form', :onsubmit => 'return false;' do %>
            <%= hidden_field_tag :show_all %>
            <%= hidden_field_tag :role %>
            <%= hidden_field_tag :from_add_member_screen, "true" %>
            <%= text_field_tag :name, '', :id => 'member_search_name', :autocomplete => 'off' %>
            <%= spinner('member_search') %>
          <% end %>
        </div>
        <div class="mh_popup_box_scroller">
          <div id="member_search_results" class="name_search_results"></div>
        </div>
      </div>
    	<div class="mh_popup_buttons">
    		<button class="large_lightgray mh_popup_cancel_button" id="">Cancel</button>
    	</div>
    </div>
  </div>
</div>