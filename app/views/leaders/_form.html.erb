<%= form_tag @person.new_record? ? add_person_leaders_path : leader_path(@person), method: :put, :remote => true, :id => 'create_leader_form' do %>
  <% if flash[:error] %>
    <div class="flash error"><strong><%= raw flash[:error] %></strong></div>
  <% end %>
  <br/>
  <label for="leader_search_name"><font color="red"><%= t('.name_required') %></font></label>
  
  <%= render 'people/person_form', :person => @person %>
  <%= submit_tag t('general.add'), :disable_with => t('general.adding') %>
<% end %>
