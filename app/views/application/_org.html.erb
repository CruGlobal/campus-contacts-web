<li <% if primary %>class="primary" title="This is your primary organization"<% end %>>
  <%= link_to(set_current_organization_membership_path(org), title: "Go to #{org}") do  %><label><%= org %></label><% end %>
  <div class="orgactions">
    <%= link_to("", set_current_organization_membership_path(org), class: "icon magnify", title: "Go to #{org}") %>
    <%= link_to("", set_primary_organization_membership_path(org), class: "icon #{primary ? 'star' : 'star_empty'}", title: "Set #{org} as your default") if involved %>
  </div>
  <% if org.show_sub_orgs? && org.children.present? %>
    <ul>
      <% org.children.each do |org| %>
        <%= render 'org', org: org, primary: false, involved: current_person.organizations.include?(org) %>
      <% end %>
    </ul>
  <% end %>
</li>