<li class="leader" data-id="<%= person.id %>">
  <%= link_to('x', leader_path(person.id), method: :delete, remote: true, class: 'delete_leader', :confirm => "Are you sure you want to remove #{person} as a leader?") %>
  <span class="name"><%= link_to(person, contacts_path(assigned_to: person.id)) %></span> (<span class="count"><%= person.contact_assignments.for_org(@organization).count %></span>)
</li>