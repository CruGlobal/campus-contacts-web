<% provide :sidebar do %>
  <div id="ac_sidebar">
    <div id="upper_sidebar_lists">
    	<button class="red_accent full_width_button" id="allcontacts_add_contact_button">Add a Contact</button>
    </div>
  	<div id="mine_sidebar_lists">
      <ul class="ac_dropdown_list">
      	<li class="ac_dropdown_list_header <%= 'selected_class' if params[:status] == 'all' %>">
          <%= link_to(t('contacts.mine.all'), mine_contacts_path(status: 'all')) %>
          (<%= @all_contacts.count %>)
        </li>
      	<li class="ac_dropdown_list_header <%= 'selected_class' if params[:status] == 'completed' %>">
          <%= link_to(t('contacts.mine.completed'), mine_contacts_path(status: 'completed')) %>
          (<%= @completed_contacts.count %>)
        </li>
      	<li class="ac_dropdown_list_header <%= 'selected_class' if params[:status] == 'in_progress' %>">
          <%= link_to(t('contacts.mine.in_progress'), mine_contacts_path(status: 'in_progress')) %>
          (<%= @inprogress_contacts.count %>)
        </li>
      	<li class="ac_dropdown_list_header <%= 'selected_class' if params[:status] == 'detailed' %>">
          <%= link_to(t('contacts.mine.detailed'), all_contacts_path(assigned_to: current_person.id)) %>
        </li>
      	<li class="ac_dropdown_list_header">
          <%= link_to(t('contacts.mine.comments'), followup_comments_path) %>
        </li>
      </ul>
    </div>
  </div>
<% end %>