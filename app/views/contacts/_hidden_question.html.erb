<% if @predefined_survey.questions.include?(hidden_question) %>
  <% link_text = hidden_question.attribute_name.gsub('_',' ') %>
<% else %>
  <% link_text = hidden_question.slug.present? ? hidden_question.slug : hidden_question.label %>
<% end%>
<li>
  <%= link_to(link_text.titleize, unhide_survey_question_path(@organization.surveys.first, hidden_question), method: :put) %>
</li>