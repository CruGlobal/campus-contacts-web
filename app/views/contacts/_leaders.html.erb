<h3><%= t('ma.people.index.leaders') %></h3>
<%= link_to(t('ma.contacts.index.add'), '#', class: 'add-leader') %>
<ul id="leaders">
  <% @organization.leaders.each do |person| %>
    <%= render 'contacts/leader', person: person %>
  <% end %>
</ul>

<ul><li class="leader unassigned" data-id=""><span class="name"><%= link_to(t('ma.contacts.index.unassigned'), contacts_path) %></span> (<span id="unassigned_count" class="count"><%= unassigned_people(@organization).count %></span>)</li></ul>
<ul><li><%= link_to(t('ma.contacts.index.all'), contacts_path(assigned_to: 'all')) %> (<%= OrganizationalRole.not_dnc.where(organization_id: @organization.id).count %>)</li></ul>
<ul><li><%= link_to(t('ma.contacts.index.dnc'), contacts_path(dnc: true)) %> (<%= OrganizationalRole.dnc.where(organization_id: @organization.id).count %>)</li></ul>
<%= render 'leader_form' %>