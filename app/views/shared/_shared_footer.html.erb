<%= render 'fb_init' if branded? %>
<%= render 'google_analytics' %>
<%= render 'adobe_analytics_foot' %>
<script type="text/javascript" charset="utf-8">
  I18n.defaultLocale = "<%= I18n.default_locale %>";
  I18n.locale = "<%= I18n.locale %>";
  $.params = <%= raw params.dup.keep_if {|_k, v| v.is_a?(String) || v.is_a?(Numeric) || v.is_a?(Enumerable)}.to_json %>;

  angular.module('missionhubApp').config(function(assetPathProvider, $sceDelegateProvider) {
      assetPathProvider.setAssets(
          <%= File.read(Dir.glob('public/assets/manifest-*.json').last).html_safe rescue '{}' %>
      );
      <% if ENV['ASSET_HOST'].present? %>
        assetPathProvider.setUrlBase("<%= ENV['ASSET_HOST'] %>");
        $sceDelegateProvider.resourceUrlWhitelist(['self', "<%= ENV['ASSET_HOST'] %>/**"]);
      <% end %>
  });
</script>
