<%# cache(user_signed_in? ? ['global_nav', "#{current_user.id}", current_organization.try(:id)] : 'global_nav', expires_in: 15.minutes) do %>
<div id="global">
  
  <%= link_to("", "/", id: "logo") %>
  
  <div class="gmdrop">
    <ul class="sf-menu mh-global">
      <% if session[:old_user_id].present? %>
        <li><%= link_to('Exit SU Mode', '?exit=true') %></li>
      <% end %>
      <% if user_signed_in? %>
        <% if current_organization %>
          <% if current_organization.surveys.present? %>
            <li>
              <% if current_organization.surveys.length == 1 %>
                <%= link_to(t('nav.enter_survey_mode'), start_survey_url(current_organization.surveys.first, host: APP_CONFIG['public_host'], port: APP_CONFIG['public_port']), :class => "tipit", :title => t('nav.survey_mode_tip'))%>
              <% else %>
                <%= link_to(t('nav.enter_survey_mode'), '#', id: 'survey_keywords_mode_link')%>
                <ul>
                  <% current_organization.surveys.each do |survey| %>
                    <li><div><%= link_to(t('nav.use_keyword', keyword: survey.title), start_survey_url(survey, host: APP_CONFIG['public_host'], port: APP_CONFIG['public_port']), id: 'select_keyword')%></div></li>
                  <% end %>
                </ul>
              <% end %>
            </li>
          <% end %>
          <li>
            <% if current_person.organizations.length > 1 || current_person.organizations.detect(&:show_sub_orgs?) %>
              <%= link_to(current_organization, '/contacts') %>
              <ul class="under">
                <% current_person.organizations.order('organizations.name').each do |org| %>
                  <% if org.status == "active" %>                  
                    <%= render 'application/org', org: org, primary: current_person.primary_organization == org %>
                  <% end %>
                <% end %>
              </ul>
            <% else %>
              <%= link_to(current_organization, user_root_path) %>
            <% end %>
          </li>
        <% end %>
        <li><%= link_to(t('nav.my_profile'), person_path(current_person)) %></li>
        <li>
          <%= link_to(t('nav.logout'), '#', onclick: "$.mh.logout()")  %> 
        </li>   
      <% else %>
        <% unless params[:controller] == 'sessions' %>
          <li>
            <% if mhub? %>
              <%= link_to('nav.login', user_omniauth_authorize_path(:facebook_mhub), :class => "loginbt") %>
            <% else %>
              <%= link_to(t('nav.login'), new_user_session_path, :class => "loginbt") %>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  
  
</div>
<%# end %>
