<div class="titlebar">
  <h1><%= t('.title') %></h1>
</div>

<div class="pad">

  <%= form_tag("/organizations/archive_contacts") do %>
    <div>
     <h3><% t('.instructions') %></h3>
     <%= image_tag("step1.png") %>     
     
      <ul class="instructions">
        <li><span class="name"><%= t('.archive_inst_1') %> <%= text_field_tag :archive_contacts_before, @date %> <%= t('.archive_inst_2') %> <span id="archive_label_name_preview"><%= @date %></span>"</span>
      </ul>
    </div>

    <%= submit_tag t('.submit'), :confirm => t('.confirm_archive') %>
  <% end %>

</div>
