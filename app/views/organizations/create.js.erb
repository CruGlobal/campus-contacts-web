<% if @error.present? %>
  $.a("<%= @error %>");
<% else %>
  $('#<%= dom_id(@parent) %> ul').prepend('<%= j(render('org', org: @organization)) %>');
  $('[data-id=<%= @organization.id %>]').effect('highlight');
  $('.org_big_add').closest('li').hide();
  $("#add_new_org_div").replaceWith("<%= j(render('add_org', organization: @parent.children.new)) %>");
  $.hideDialog($("#add_new_org_div"));
  $.fn.tip(); // to re-run the tooltip from the new rendered view
<% end %>
$("#add_new_org_loader").hide();
$("#add_new_org_content").show();

