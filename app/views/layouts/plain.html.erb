<!DOCTYPE html>
<html>
<head>
  <%= render 'shared/head' %>
  <%= stylesheet_link_tag 'plain' %>
</head>
<body id="<%= controller.controller_name %>_controller">
  
  <div id="outer" class="plain">
    <div id="plainheader">
      <!-- <a href="/" id="logo"></a> -->
      <%= link_to(t('contacts.plain.exit_survey'), facebook_logout_url(next: 'http://' + request.host_with_port)) %> 
      <% if can? :manage, @keyword %>
        | <%= link_to('Close Window', '#', onclick: 'window.close()') %>
      <% end %>
    </div>
  
    <div class="<%= params[:action] %>">
      <%= yield %>
    </div>
    
    <div class="footer">
      MissionHub 2011 &copy;
    </div>
    
  </div><!-- outer -->

</body>
</html>


