<!DOCTYPE html>
<html>
<head>
  <%= render 'shared/head' %>
  <%= stylesheet_link_tag 'plain' %>
</head>
<body id="<%= controller.controller_name %>_controller">
  
  <div id="outer" class="plain">
    <% if user_signed_in? %>
      <div id="global">
        <div class="gmwrap">
          <ul class="sf-menu">
            <li class="item">
              <%= link_to(t('nav.logout'), facebook_logout_url(next: cookies[:survey_mode].present? ? contact_form_url(@keyword.keyword, host: 'mhub.cc') : sign_out_url))  %> 
            </li>   
          </ul>
        </div>
      </div>
    <% end %>
  
    <div class="<%= params[:action] %>">
      <%= yield %>
    </div>
    
    <div class="footer">
      <%= link_to(t('nav.terms'), '/terms') %> |
      <%= link_to(t('nav.privacy'), '/privacy') %>
    </div>
    
  </div><!-- outer -->

</body>
</html>


