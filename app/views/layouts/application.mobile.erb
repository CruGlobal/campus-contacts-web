<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Cru") %></title>
		<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.css" />
		<script src="http://code.jquery.com/jquery-1.5.2.min.js" ></script>
		<script src="http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.js" ></script>
    <%= javascript_include_tag 'rails-validations' %>
    <%= javascript_include_tag 'mh' %>
		
		<%= stylesheet_link_tag 'mobile' %>

    <%= render 'google_analytics' %>
    <%= yield(:head) %>
    <script type="text/javascript">if (window.location.hash == '#_=_')window.location.hash = '';</script>
    
  </head>
  <body>
    <%= render 'fb_init' %>
		<div data-permission="page">
			<%- unless params[:simple] == 'true' -%>
				<div data-permission="header">
	    		<div class="current" id="home">

			        <div data-permission="header" permission="banner" data-backbtn="false">
			          <h1 class="ui-title" tabindex="0" permission="heading"><%=h yield(:title) %></h1>
                <% if cookies[:survey_mode].present? && cookies[:survey_id].present? %>
                  <%= link_to(t('nav.logout'), sign_out_url(next: start_survey_url(cookies[:survey_id])), "data-permission" => "button", rel: "external")  %>
                <% end %>
			        </div>
				  </div>
			  </div>
			<%- end -%>
      <div data-permission="content">
		    <%= yield %>
		  </div>
	  </div>
  </body>
</html>
