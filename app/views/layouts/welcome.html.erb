<!DOCTYPE html>
<html>
<head>
  <%= render 'welcome/head' %>
</head>
<body id="<%= controller.controller_name %>_controller" class="<%= yield :body_classes %>">
  <%= render 'welcome/header' unless params.has_key?('no-chrome') %>

  <% if content_for?(:hero) -%>
    <div class="hero">
      <%= yield :hero %>
    </div>
  <% end -%>

  <div class="<%= params[:action] %>">
    <div class="container">
      <section role="global">
        <%= yield %>
      </section>
      <% if content_for?(:aside) && !params.has_key?('no-chrome') -%>
        <aside role="global">
          <%= yield :aside %>
        </aside>
      <% end -%>
    </div>
  </div>

  <%= render 'welcome/footer' unless params.has_key?('no-chrome') %>
  <%= render 'fb_init' %>
</body>
</html>