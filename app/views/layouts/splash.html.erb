<!DOCTYPE html>
<html>
<head>
  <%= render 'shared/head' %>
  <%= javascript_include_tag 'welcome.js' %>
  <script>
	  $(function() {
  	  $("table.actionpack tr:even").addClass("even");
  	  $(".touraccordion").accordion({animated: 'bounceslide', autoHeight: false});
  	  
  		$( "#thetour" ).tabs();
  	});
  	
	</script>
  
</head>
<body id="<%= controller.controller_name %>_controller">
  <%= render 'fb_init' %>
  
  <div id="outer" class="splash">
  
    <%= render 'shared/nav' %>
      <div class="<%= params[:action] %>">
        <%= yield %>
      </div>
    
    <div class="footerSplash">
      <div class="storeicons">
        <a id="storeIphone" href="http://www.itunes.com/app/MissionHub" target="_blank"><%= image_tag("store_iphone.png") %></a>
        <a href="https://market.android.com/details?id=com.missionhub" target="_blank"><%= image_tag("store_android.png") %></a>
      </div>
      
      <div class="footerText">
      	&copy; Copyright <%= Time.now.year %>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<%= link_to(t('nav.terms'), '/terms') %>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<%= link_to(t('nav.privacy'), '/privacy') %>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;Powered by <%= link_to('Cru', 'http://cru.org') %>
      </div>
    </div>
    
  </div><!-- outer -->

</body>
</html>


