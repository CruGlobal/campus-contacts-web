<% connect_pattern = /contacts|surveys|keywords/ %>
<!DOCTYPE html>
<html>
<head>
  <%= render 'shared/head' %>
</head>
<body id="<%= controller.controller_name %>_controller" class="<%= params[:action] %>">
  
  <div id="outer">
  
    <%= render 'shared/nav' %>
    
    <div id="rest">
      <div id="menugroups">
        <ul>
          <li class="<%= 'selected' if request.path =~ connect_pattern %>"><%= link_to("Connect", "/contacts") %></li>
          <li class="<%= 'selected' if request.path !~ connect_pattern %>"><%= link_to("Care", "/people") %></li>
        </ul>
      </div>
      <div id="topmenu">
        <ul>
          <!-- <li><%#= link_to("Dashboard", user_root_path) %></li> -->
          <% if request.path =~ connect_pattern %>
            <li class="<%= 'selected' if request.fullpath == '/contacts/mine' %>"><%= link_to(image_tag("t_contact_white.png", :class=> "tmenu") + t('nav.my_contacts'), "/contacts/mine") %></li>
            <li class="<%= 'selected' if  params[:controller] == 'contacts' && params[:action] == 'index' %>"><%= link_to(image_tag("t_group_white.png", :class=> "tmenu") + t('nav.all_contacts'), "/contacts") %></li>
            <% if can? :manage, current_organization %>
              <li class="<%= 'selected' if params[:controller] == 'sms_keywords' %>"><%= link_to(image_tag("t_keyword_white.png", :class=> "tmenu") + t('nav.keywords'), sms_keywords_path) %></li>
            <% end %>
          <% else %>
            <li class="<%= 'selected' if  params[:controller] == 'people' %>"><%= link_to(image_tag("t_directory.png", :class=> "tmenu") + t('nav.directory'), "/people") %></li>
            <% if can? :create, Group %>
              <li class="<%= 'selected' if  params[:controller] == 'groups' %>"><%= link_to(image_tag("t_directory.png", :class=> "tmenu") + t('nav.groups'), "/groups") %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    
      <div id="left">
        
        <div class="block">
          <%= yield :sidebar %>
        </div>
      </div>
  
      <div id="main">    
            
        <div class="<%= params[:action] %> carea">
          <% if flash && (flash[:error] || flash[:notice] || flash[:alert]) %>
            <div class="flash" style="margin:10px;width:770px">
              <% if flash[:error].present? || flash[:alert].present? %>
                <div class="flash_message error">
                  <p><%= flash[:error] || flash[:alert] %></p>
                </div>
              <% end %>

              <% if flash[:notice].present? %>
                <div class="flash_message notice">
                  <p><%= flash[:notice] %></p>
                </div>
              <% end %>
            </div>
          <% end %>
                
          <%= yield %>
        </div>
      </div><!-- main -->
      
      <div class="clear"></div>
    </div>
    
    <div class="footer">
      <%= link_to 'FAQ', 'http://wiki.uscm.org/display/MH/MissionHub+FAQ' %> |
      Can't find it in the <%= link_to 'FAQ', 'http://wiki.uscm.org/display/MH/MissionHub+FAQ' %>? <%= mail_to('support@missionhub.com', 'Shoot us an email', encode: 'javascript', replace_at: ' (at) ', replace_dot: ' (dot) ') %> |
      <%= link_to(t('nav.terms'), '/terms') %> |
      <%= link_to(t('nav.privacy'), '/privacy') %>
    </div>
    
  </div><!-- outer -->

</body>
</html>


