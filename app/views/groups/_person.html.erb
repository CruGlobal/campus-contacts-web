<tr id="<%= dom_id(person) %>" class="person_row" data-name="<%= person.name %>" data-email="<%= person.email %>" data-id="<%= person.id %>">
  <td nowrap="nowrap" class="checkbox_cell">
    <%= check_box_tag 'ids[]', person.id, false, 'data-id'=>person.id, 'data-number'=>person.pretty_phone_number, id: "ids_#{person.id}", class: 'id_checkbox contact_checkbox', 'data-name' => "#{person.first_name} #{person.last_name}", 'data-email'=>person.email %>
  </td>
  <td class="name"><%= person.name %></td>
  <td class="email"><%= mail_to(person.email) if person.email.present? %></td>
  <td class="phone_number"><%= person.pretty_phone_number %></td>
  <td>
    <%= t(group_membership.role) if group_membership.role.present? %>
    <% if person.is_archived?(current_organization) %>
      <span class="archived_group_label">&nbsp<%= t('general.archived') %>&nbsp</span>
    <% end %>
  </td>
  <td class="controls" align="right">
    <%= link_to(t('general.delete'), group_group_membership_path(@group, group_membership), :method => :delete, :remote => true, :class => "icon delete", :confirm => t('.remove_confirm', name: person)) %></td>
</tr>
