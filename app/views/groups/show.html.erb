<% provide :sidebar do %>
  <ul class="leftmenu">
    <li class="heading selected">
      <h3><%= t('.details') %></h3>
    </li>
    <li>
      <ul id="leaders" class="indent expandable" data-height="244">
        <% current_organization.group_labels.each do |label| %>
          <li><%= label %></li>
        <% end %>
      </ul>
    </li>
  </ul>
<% end %>

<div class="titlebar">
  <h1><%= @group %></h1>
</div>

<div class="pagemenu">
  <ul class="pillmenu">
    <li>     
      <%= link_to(t('.add_member'), '#', class: 'add-member') %>
    </li>
    <li>     
      <%= link_to(t('.add_leader'), '#', class: 'add-leader') %>
    </li>
  </ul>
</div>

<table class="listing" cellpadding="0" cellspacing="0">
  <tbody id="group_table">
  </tbody>
</table>

<%= render 'group_memberships/form' %>