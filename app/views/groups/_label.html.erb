    <%= link_to('x', group_label_path(label), method: :delete, remote: true, class: 'delete_label', :confirm => "Are you sure you want to remove #{label}?") %>
  <%# end %>
  <span class="name"><%= link_to(label, groups_path(label: label)) %></span>
</li>