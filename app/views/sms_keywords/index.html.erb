<% provide :sidebar do %>
  <ul class="leftmenu">
    <li class="selected"><a href="/sms_keywords">Surveys</a></li>
    <li><%= link_to("Request Keyword", new_sms_keyword_path) %></li>
<% end %>



<% if can? :manage, SmsKeyword %>
  <div class="titlebar">
    <h1><%= image_tag("c_survey.png") %>Surveys</h1>
  </div>
  <% if current_organization.keywords.any? {|keyword| keyword.gateway != 'twilio'} %>
  <div class="flash" style="margin:10px;width:770px">
    <div class="flash_message error" style="text-align:left">
      <p>Notice: We have a new short code (the phone number you text in to)! The new code is <strong>85005</strong>. Please start using this new number immediately.
        The old code (75572) will continue to work until December 1st, 2011. Your surveys will currently work using either number, but you can help us out by making 
        the move earlier. Unless you have a reason not to, please <%= link_to("click here to accept the number change.", accept_twilio_sms_keywords_path, method: :post) %> 
        Once you do that, your surveys will only
        work on the new number. If you have a reason why you need to use the old number past December 1st, 2011, please email us at <%= mail_to 'support@missionhub.com' %>
      </p>
    </div>
  </div>
  <% end %>
  <div class="pagemenu">
    <ul class="pillmenu">
      <li>
        <%= link_to(t("welcome.index.request_key"), new_sms_keyword_path) %>
      </li>
    </ul>
  </div>
  
  
  
  <table class="listing keywordtable" cellpadding="0" cellspacing="0">
    <tr>
      <th class="check"></th>
      <th><%= t("general.keyword") %> <%= tip(t('welcome.index.request_key_help')) %></th>
      <% if current_organization.show_sub_orgs? %>
        <th><%= t("keywords.index.association") %> <%= tip(t('keywords.index.association_help')) %></th>
      <% end %>
      <th><%= t("general.status") %></th>
      <th class="controls">&nbsp;</th>
    </tr>
    <% @keywords.each do |keyword| %>
      <tr>
        <td class="checkbox"></td>
        <td><%= keyword.keyword %></td>
        <% if current_organization.show_sub_orgs? %>
          <td><%= keyword.organization %></td>
        <% end %>
        <td><%= keyword.state %></td>
        <td class="controls">
          <%= link_to t("welcome.home.manage_questions"), sms_keyword_questions_path(keyword) %>
          <%= link_to t("welcome.home.edit_keyword"), edit_sms_keyword_path(keyword), :class => "icon edit tipit", :title => "Edit Keyword" %>
          <%= link_to t("welcome.home.delete"), sms_keyword_path(keyword), method: :delete, confirm: "Are you sure you want to delete this keyword?", :class => "icon delete tipit", :title => "Delete survey" %>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="contentpad">
    
  </div>
<% end %>