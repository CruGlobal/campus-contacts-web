<% provide :sidebar do %>
  <ul class="leftmenu">
    <li class="selected"><a href="/sms_keywords">Keywords</a></li>
    <li><%= link_to("Request Keyword", new_sms_keyword_path) %></li>
<% end %>



<% if can? :manage, SmsKeyword %>
  <div class="titlebar">
    <h1>Keywords</h1>
  </div>
  
  <div class="pagemenu">
    <ul class="pillmenu">
      <li>
        <%= link_to(t("welcome.index.request_key"), new_sms_keyword_path) %>
      </li>
    </ul>
  </div>
  
  
  
  <table class="contacts-main keywordtable" cellpadding="0" cellspacing="0">
    <tr>
      <th class="check"></th>
      <th><%= t("general.keyword") %></th>
      <th><%= t("general.status") %></th>
      <th class="controls">&nbsp;</th>
    </tr>
    <% @keywords.each do |keyword| %>
      <tr>
        <td class="checkbox"></td>
        <td><%= keyword.keyword %></td>
        <td><%= keyword.state %></td>
        <td class="controls">
          <%= link_to t("welcome.home.manage_questions"), sms_keyword_questions_path(keyword) %>
          <%= link_to t("welcome.home.edit_keyword"), edit_sms_keyword_path(keyword), :class => "icon edit" %>
          <%= link_to t("welcome.home.delete"), sms_keyword_path(keyword), method: :delete, confirm: "Are you sure you want to delete this keyword?", :class => "icon delete" %>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="contentpad">
    
  </div>
<% end %>