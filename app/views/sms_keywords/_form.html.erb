<%= form_for(@sms_keyword, validate: true) do |f| %>
  <%= error_messages_for :sms_keyword %>
  
  <div class="stepwrap rwidth">
    <div class="stepnumber">
      <%= image_tag("step1.png") %>
    </div>
    <div class="stepcontent"> 
      <% if @sms_keyword.new_record? %>
        <div class="field">
          <label for="sms_keyword_<%= :keyword %>">
            <%= t('keywords.form.keyword') + ": " + t('keywords.form.keyword_tip') %>
            <span class="tiplight" title="<%= t('keywords.form.keyword_instruct') %>"></span>
          </label>
          <%= f.text_field :keyword, :placeholder => "Shorter keywords are better" %>
        </div>
      <% else %>
        <div class="keywordname tipthis" title="Keywords can't be changed. You can delete this one and create a new one if necessary.">
          <%=  t('keywords.form.keyword') %>: <%= @sms_keyword.keyword %>
        </div>
      <% end %>
      <div class="field">
        <%= f.label :explanation, t('keywords.form.explanation') %>
        <%= f.text_area :explanation, rows: 5, placeholder: t("keywords.form.keyword_why") %>
      </div>
    </div>
  </div>
  <div class="stepwrap rwidth">
    <div class="stepnumber">
      <%= image_tag("step2.png") %>
    </div>
    <div class="stepcontent">    
      <div class="field">
        <label for="sms_keyword_initial_response">
          <%= raw(t('keywords.form.initial_response')) %> 
          <span class="tiplight" title="<%= t('keywords.form.post_survey_why') %>"></span>
        </label>
        <%= f.text_area :initial_response, rows: 3 %>
      </div>
      
      
    </div>
  </div>
  
  <div class="stepwrap rwidth">
    <div class="stepnumber">
      <%= image_tag("step3.png") %>
    </div>
    <div class="stepcontent">
      <div class="field">
        <%= f.label :post_survey_message, t('keywords.form.post_survey_message') %>
        <%= f.text_area :post_survey_message, rows: 5, :placeholder => "Example: Thank you for your time! If you're interested in Cru, we meet at Moore Auditorium every Thursday @ 8PM" %>
      </div>
    </div>
  </div>
  
  <div class="stepwrap rwidth">
    <div class="stepnumber">
      <%= image_tag("step4.png") %>
    </div>
    <div class="stepcontent"> 
      <% if current_organization.show_sub_orgs? %>   
        <div class="field">
          <label for="sms_keyword_organization">
            <%= raw(t('keywords.form.association', this_term: current_organization.terminology, child_term: current_organization.children.first.terminology)) %> 
            <span class="tiplight" title="<%= t('keywords.index.association_help') %>"></span>
          </label>
          <%= f.select :organization_id, ([current_organization] + current_organization.children).collect {|o| [o.to_s, o.id]} %>
        </div>
      <% else %>
        <div class="field">
          <strong>This keyword will be associated with <%= current_organization %>.</strong>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit %> Note: Processing requests may take up to 24 hours.
      </div>
    </div>
  </div>
<% end %>
