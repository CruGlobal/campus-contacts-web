<%= form_for(@sms_keyword, validate: true) do |f| %>
  <%= error_messages_for :sms_keyword %>
  
  <div class="stepwrap rwidth">
    <div class="stepnumber">
      <%= image_tag("step1.png") %>
    </div>
    <div class="stepcontent"> 
      <% if @sms_keyword.new_record? %>
        <div class="field">
          <%= f.label :keyword, t('keywords.form.keyword'), :title => t('keywords.form.keyword_tip'), :class=> "tipthis" %>
          <%= f.text_field :keyword, :placeholder => "Shorter keywords are better" %>
        </div>
      <% else %>
        <div class="keywordname tipthis" title="Keywords can't be changed. You can delete this one and create a new one if necessary.">
          <%=  t('keywords.form.keyword') %>: <%= @sms_keyword.keyword %>
        </div>
      <% end %>
      <div class="field">
        <%= f.label :explanation, t('keywords.form.explanation') %>
        <%= f.text_area :explanation, rows: 5 %>
      </div>
    </div>
  </div>
  <div class="stepwrap rwidth">
    <div class="stepnumber">
      <%= image_tag("step2.png") %>
    </div>
    <div class="stepcontent">    
      <div class="field">
        <%= f.label :initial_response, raw(t('keywords.form.initial_response')) %>
        <%= f.text_area :initial_response, rows: 3 %>
      </div>
      
      
    </div>
  </div>
  
  <div class="stepwrap rwidth">
    <div class="stepnumber">
      <%= image_tag("step3.png") %>
    </div>
    <div class="stepcontent">
      <div class="field">
        <span class="tiplight" title="this is the tip from this thing"></span>
        <%= f.label :post_survey_message, t('keywords.form.post_survey_message') %>
        <%= f.text_area :post_survey_message, rows: 5, :placeholder => "Example: Thank you for completing our short survey." %>
      </div>
      <% if current_user.person.organizations.length > 1 %>
        <div class="field">
          This keyword will be associated with <%= current_organization %>.
        </div>
      <% end %>
      <!-- <div class="field">
        <%#= f.label :chartfield, t('keywords.form.chartfield') %>
        <%#= f.text_field :chartfield %>
      </div> -->
      
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
