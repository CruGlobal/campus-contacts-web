<%= form_for(@sms_keyword, validate: true, html: {id: 'sms_keyword_form'}) do |f| %>
  <%= error_messages_for :sms_keyword %>
  
  <div class="stepwrap rwidth">
    <div class="stepnumber">
      <%= image_tag("step1.png") %>
    </div>
    <div class="stepcontent"> 
      <% if @sms_keyword.new_record? %>
        <div class="field">
          <label for="sms_keyword_<%= :keyword %>">
            <%= t('sms_keywords.form.keyword') + ": " + t('sms_keywords.form.keyword_tip') %>
            <%= tip(t('sms_keywords.form.keyword_instruct')) %>
          </label>
          <%= f.text_field :keyword, :placeholder => "Shorter keywords are better" %>
        </div>
      <% else %>
        <div class="keywordname tipthis" title="<%= t('sms_keywords.form.keyword_locked') %>">
          <%=  t('sms_keywords.form.keyword') %>: <%= @sms_keyword.keyword %>
        </div>
      <% end %>
      <div class="field">
        <%= f.label :explanation, t('sms_keywords.form.explanation') %>
        <%= f.text_area :explanation, rows: 5, placeholder: t("keywords.form.keyword_why") %>
      </div>
    </div>
  </div>
  <div class="stepwrap rwidth">
    <div class="stepnumber">
      <%= image_tag("step2.png") %>
    </div>
    <div class="stepcontent">    
      <div class="field">
        <label for="sms_keyword_initial_response">
          <%= raw(t('sms_keywords.form.initial_response')) %> 
          <%= tip(t('sms_keywords.form.post_survey_why')) %>
        </label>
        <%= f.text_area :initial_response, rows: 3 %>
      </div>
      
      
    </div>
  </div>
  
  <div class="stepwrap rwidth">
    <div class="stepnumber">
      <%= image_tag("step3.png") %>
    </div>
    <div class="stepcontent"> 
      <% if current_organization.show_sub_orgs? && current_organization.has_children? %>   
        <div class="field">
          <label for="sms_keyword_organization">
            <%= raw(t('sms_keywords.form.association', this_term: current_organization.terminology, child_term: current_organization.children.first.terminology)) %> 
            <%= tip(t('sms_keywords.index.association_help')) %>
          </label>
          <%= f.select :organization_id, ([current_organization] + current_organization.children).collect {|o| [o.to_s, o.id]} %>
        </div>
      <% else %>
        <div class="field">
          <strong><%= t('sms_keywords.form.keyword_associated_with', org: current_organization) %></strong>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit %> <%= t('sms_keywords.form.note') if @sms_keyword.new_record? %>
      </div>
    </div>
  </div>
<% end %>
