<%= form_for Question.new, :url => sms_keyword_questions_path(@keyword), :remote => true do |f| %>
  <%= t('ma.questions.form.what_question_type') %>
  <%= select_tag('question_type', options_for_select([[t('ma.quesitons.form.short_answer'), 'TextField:short'], [t('ma.quesitons.form.multiple_choice'), 'ChoiceField:radio'], 
                                  [t('ma.quesitons.form.checkboxes'), 'ChoiceField:checkbox'], [t('ma.quesitons.form.dropdown'),'ChoiceField:drop-down']]), :include_blank => true) %>
  <div id="short_answer_form" style="display:none">
    <%= render 'short_answer_form', :f => f %>
    <br/><br/>
    <%= f.submit %>
  </div>
  <div id="multiple_choice_form" style="display:none">
    <%= render 'multiple_choice_form', :f => f %>
    <br/><br/>
    <%= f.submit %>
  </div>
<% end %>