<div class="titlebar">
  <h1>Manage Survey Questions</h1>
</div>

<div class="pagemenu">
  <ul class="pillmenu">
    <li><%= link_to('Preview Survey', contact_form_path(keyword: @keyword.keyword), target: '_blank')%></li>
    <li>     
      <% if session[:wizard] %>
        <%= link_to(t('nav.back_to_wizard'), wizard_path) %>
      <% else %>
        <%= link_to(t('nav.back_to_dashboard'), user_root_path) %>
      <% end %>
    </li>
  </ul>
</div>

<% provide :sidebar do %>
  <ul class="leftmenu">
    <li class="selected"><a href="/sms_keywords">Keywords</a></li>
    <li><%= link_to("Request Keyword", new_sms_keyword_path) %></li>
  </ul>
<% end %>

<div class="contentpad">
  
  <p class="inlinehelp">
    To begin your survey, <strong>text <%= @keyword.keyword %> to <%= SmsKeyword::SHORT %>.</strong>
  </p>
  
  <p>Note: First and Last name will be automatically added to every survey. There's no need for you to add those.</p>
  
  <h3>Predefined Questions</h3>
  <table border="0" cellspacing="5" cellpadding="0">
    <tbody id="predefined_questions">
      <% @predefined.questions.each do |question| %>
        <% unless @questions.include?(question) %>
          <%= render 'predefined_question', question: question %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  
  
  
  
  <h3>Your Questions (drag to sort)</h3>
  <table border="0" cellspacing="0" cellpadding="0">
    <tbody id="questions" data-sortable="true" data-sortable-url="<%= reorder_sms_keyword_questions_path(@keyword) %>">
      <%= render partial: 'question', collection: @questions %>
    </tbody>
  </table>  
  
  <%= link_to('+ Add a question', '', id: 'add_question_link', class: "inlinebutton") %>
  
  <div id="question_form" style="display:none">
    <%= render 'form', question: Question.new %>
  </div>
  
  <script type="text/javascript" charset="utf-8">
    $(function() {
      $('#question_type').change()
    })
  </script>
</div>