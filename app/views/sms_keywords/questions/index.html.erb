<div class="titlebar">
  <h1><%= t('.manage') %></h1>
</div>

<div class="pagemenu">
  <ul class="pillmenu">
    <li><%= link_to('Preview Survey', contact_form_path(keyword: @keyword.keyword, host: APP_CONFIG['public_host'], port: APP_CONFIG['public_port']), target: '_blank')%></li>
    <li>     
      <% if session[:wizard] && wizard_path %>
        <%= link_to(t('nav.back_to_wizard'), wizard_path) %>
      <% else %>
        <% session[:wizard] = false %>
        <%= link_to(t('nav.back_to_dashboard'), user_root_path) %>
      <% end %>
    </li>
  </ul>
</div>

<% provide :sidebar do %>
  <ul class="leftmenu">
    <li class="selected"><a href="/sms_keywords"><%= t('sms_keywords.edit.keywords') %></a></li>
    <li><%= link_to(t('.request_keyword'), new_sms_keyword_path) %></li>
  </ul>
<% end %>

<div class="contentpad">
  
  <p class="inlinehelp">
    <%= t('general.survey_text_tip_html', keyword: @keyword.keyword, shortcode: SmsKeyword::SHORT) %>
  </p><br/><br/>
  <p class="inlinehelp">
    <%= t('general.survey_web_tip_html', keyword: @keyword.keyword) %>
  </p>
  
  <p><%= t('.note') %></p>
  
  <h3><%= t('.predefined') %> <%= tip(t('questions.predefined_help')) %></h3>
  <table border="0" cellspacing="5" cellpadding="0" class="yourquestions">
    <tbody id="predefined_questions">
      <% @predefined.questions.each do |question| %>
        <% unless @questions.include?(question) %>
          <%= render 'predefined_question', question: question %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  
  
  <h3><%= t('.your_questions') %> <%= tip(t('questions.your_questions_help')) %></h3>
  <table border="0" cellspacing="0" cellpadding="0" class="yourquestions fakesort">
    <tbody>
      <tr>
        <td><%= t('contacts.index.first_name') %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= t('contacts.index.last_name') %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= t('contacts.index.phone_number') %></td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  </table>
  <table border="0" cellspacing="0" cellpadding="0" class="yourquestions">
    <tbody id="questions" data-sortable="true" data-sortable-url="<%= reorder_sms_keyword_questions_path(@keyword) %>">
      <%= render partial: 'question', collection: @questions %>
    </tbody>
  </table>  
  
  
  <h3><%= t('.archived_questions') %> <%= tip(t('questions.archived_help')) %></h3>
  <table border="0" cellspacing="5" cellpadding="0" class="yourquestions">
    <tbody id="archived_questions">
      <% @archived_questions.each do |question| %>
        <%= render 'predefined_question', question: question %>
      <% end %>
    </tbody>
  </table>
  <%= link_to('+ ' + t('.add_question'), '', id: 'add_question_link', class: "inlinebutton") %>
  
  <div id="question_form" style="display:none">
    <%= render 'form', question: Question.new %>
  </div>
  
  <script type="text/javascript" charset="utf-8">
    $(function() {
      $('#question_type').change()
    })
  </script>
</div>