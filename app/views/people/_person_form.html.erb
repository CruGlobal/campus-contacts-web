<%= fields_for person, {validators: {}} do |pf| %>
  <table border="0" cellspacing="0" cellpadding="0" class="modal_person_info">
  <tr>
    <td class="left"><%= t('general.first_name') %>:</td>
    <td><%= pf.text_field :firstName %></td>
  </tr>
  <tr>
    <td class="left"><%= t('general.last_name') %>:</td>
    <td><%= pf.text_field :lastName %></td>
  </tr>
  <tr>
    <td class="left"><%= t('general.gender') %>:</td>
    <td>
      <%= pf.radio_button :gender, '1' %> <%= t('general.male') %> 
      <%= pf.radio_button :gender, '0' %> <%= t('general.female') %> 
    </td>
  </tr>
  <%= pf.fields_for (@email || person.primary_email_address || person.email_addresses.new) do |af| %>
  <tr>
    <td class="left"><%= t('general.email') %>:</td>
    <td><%= af.text_field :email %></td>
  </tr>
  <% end %>
  <%= pf.fields_for (@phone || person.primary_phone_number || person.phone_numbers.new) do |af| %>
  <tr>
    <td class="left"><%= t('general.phone') %>:</td>
    <td><%= af.text_field :number %></td>
  </tr>
  <% end %>
        
 <%= pf.fields_for :current_address, (person.current_address || person.build_current_address) do |af| %>        
  <tr>
    <td class="left"><%= t('general.address1') %>:</td>
    <td><%= af.text_field :address1 %></td>
  </tr>
  
  <tr>
    <td class="left"><%= t('general.address2') %>:</td>
    <td><%= af.text_field :address2 %></td>
  </tr>

  <tr>
    <td class="left"><%= t('general.city') %>:</td>
    <td><%= af.text_field :city %></td>
  </tr>

  <tr>
    <td class="left"><%= t('general.state') %>:</td>
    <td><%= af.text_field :state %></td>
  </tr>
  
  <tr>
    <td class="left"><%= t('general.zip') %>:</td>
    <td><%= af.text_field :zip %></td>
  </tr>
  
  <tr>
    <td class="left"><%= t('general.country') %>:</td>
    <td><%= af.text_field :country %></td>
  </tr>
  
  
 <% end %>


  

          
  
  </table>
<% end %>