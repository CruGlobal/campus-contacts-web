<% if person %>
  <strong>Person ID: <%= person.id %></strong><br/>
  First Name: <%= person.first_name %><br/>
  Last Name: <%= person.last_name %><br/>
  Gender: <%= person.gender %><br/>
  Campus: <%= person.campus %><br/>
  Birthday: <%= l(person.birth_date) if person.birth_date %><br/>
  Person Created: <%= l(person.created_at) if person.created_at %><br/>
  Person Updated: <%= l(person.updated_at) if person.updated_at %>
  <% user = person.user %>
  <% if user %>
  <hr>
  User ID: <%= user.id %><br/>
  Username: <%= user.username %><br/>
  User Created: <%= l(user.created_at) if user.created_at %><br/>
  User Updated: <%= l(user.updated_at) if user.updated_at %><br/>
  <% end %>
<% else %>
  No person with ID of <%= params[:id] %>
<% end %>