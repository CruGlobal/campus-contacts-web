<ul class="leftmenu">
  <li class="heading selected">
    <h3><%= t('people.index.labels') %></h3>
  </li>
  <% (current_organization.roles.default_roles_desc + current_organization.roles.non_default_roles_asc).each do |role| %>
    <% count = @people_scope.where('organizational_roles.role_id' => role.id).count %>
    <li style="<%= 'display:none' if count == 0 %>"><span class="name"><%= link_to(role, :role => role.id) %></span> (<%= count %>)</li>
  <% end %>
  <li><span class="name"><%= link_to(t('contacts.index.all'), params.except(:role)) %></span> (<%= @people_scope.count %>)</li>
  <li><span class="name"><%= link_to("Archived", people_path+"?archived=true") %></span> (<%= current_organization.people.archived.count.count %>)</li>
</ul>
