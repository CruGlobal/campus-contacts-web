<% if @person.present? %>
  $("#profile_name span#name").text("<%= raw(@person.name)%>")
  if(<%= @person.id == @current_person.id %>){
    $('#current_user_name').text("<%= raw(@person.name) %> Profile")
  }
  $('.feed_content .tab_content.profile_info .view_space').html("<%= escape_javascript(render partial: 'interactions/profile_info') %>")
  $('.feed_content .tab_content.profile_info .edit_space').html("<%= escape_javascript(render partial: 'interactions/profile_info_edit') %>")
  <% if @person.errors.any? %>
    $('.feed_content .tab_content.profile_info .view_space').hide()
    $('.feed_content .tab_content.profile_info .edit_space').fadeIn()
  <% else %>
    $('.feed_content .tab_content.profile_info .edit_space').hide()
    $('.feed_content .tab_content.profile_info .view_space').fadeIn()
  <% end %>
  <% if @new_status.present? %>
    $('.followup_status_field').val("<%= @new_status %>")
  <% end %>

  // This will automatically changed the profile picture if the user updates the fb_uid
  $(".current_avatar_display").attr("src", "<%= @person.get_avatar %>")
  $.facebook_autocomplete($("#profile_facebook_search"))
  // This will update the field we check to see if the use has an email address
  $('.contact_checkbox:checked').attr('data-email', "<%= @person.email %>")
<% else %>
  $('.feed_content .tab_content.profile_info .edit_space').hide()
  $('.feed_content .tab_content.profile_info .view_space').fadeIn()
<% end %>
$.toggleLoader('profile_name','')
