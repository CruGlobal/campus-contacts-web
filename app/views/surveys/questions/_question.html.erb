<tr id="question-<%= dom_id(question) %>">
  <td class="questiontitle">
    <%= question.label_for_survey(@survey) %>
  </td>
  <td>
    <% if question.predefined? %>
      <%= link_to('edit', edit_survey_question_path(@survey, question), remote: true, class: 'edit_question_show_loading edit_question icon edit tipitleft', title: t('surveys.questions.edit.advanced_options')) %>
    <% else %>
      <%= link_to('edit', edit_survey_question_path(@survey, question), remote: true, class: 'edit_question_show_loading edit_question icon edit tipitleft', title: t('surveys.questions.edit.edit_question')) %>
    <% end %>
  </td>
  <td><%= link_to('remove', survey_question_path(@survey, question), method: :delete, confirm: t('.confirm_delete', question: question.label), remote: true, class: 'remove_question icon delete tipitleft', title: t('.delete_tip')) %></td>
</tr>
