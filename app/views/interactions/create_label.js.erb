$.toggleLoader('labels_notice','')
$('#labels_notice').text("<%= @msg_alert %>")
if("<%= @new_label.present? %>"){
  $('#labels_chooser_box').append("<%= escape_javascript(render partial: 'interactions/label', locals: {label: @new_label, checked: true}) if @new_label.present? %>")
  $('#labels_new_input').val("")
  scroll_height = parseInt($('#labels_chooser_box')[0].scrollHeight);
  $('#labels_chooser_box').animate({ scrollTop: scroll_height},'1');
}
