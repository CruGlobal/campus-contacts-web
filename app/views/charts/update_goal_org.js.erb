$('div#goal_spinner, div#goal_box_spinner').hide()
$('div#goal_box, div#goal_container').show()
<% if (can? :manage, @current_movement) && !@goal.id? %>
  $("#goal_box").html("<%= escape_javascript(render partial: 'goal_sidebar_edit_goal_box') %>")
<% else %>
  $("#goal_box").html("<%= escape_javascript(render partial: 'goal_sidebar_goal_box') %>")
<% end %>
$("#goal_container").html("<%= escape_javascript(render partial: 'goal_js') %>")
