<div id="goal_select_org">
  <%= select_tag "goal_organization", options_for_select(@movements, @current_movement.id), id: "goal_org_select" %>
</div>
<br/>

<div id="goal_select_criteria">
  <%= select_tag "goal_criteria", options_for_select(MovementIndicator.all, @current_criteria), id: "goal_criteria_select" %>
</div>
<br/>

<div id="goal_box_spinner">
  <br/>Updating Goal Information...&nbsp;<%= image_tag "spinner.gif" %>
</div>

<div id="goal_box">
  <% if (can? :manage, @current_movement) && !@goal.id? %>
    <%= render :partial => "goal_sidebar_edit_goal_box" %>
  <% else %>
    <%= render :partial => "goal_sidebar_goal_box" %>
  <% end %>
</div>