<div id="snapshot_sidebar">
  <%= form_tag update_snapshot_movements_charts_path, remote: true do %>
    <div id="snapshot_radio">
      <div id="snapshot_radio_buttons">
      <div id="snapshot_radio_button_all">
      <%= radio_button_tag 'all', 'true', true %>All</div>
      <div id="snapshot_radio_button_custom">
      <%= radio_button_tag 'all', 'false' %>Custom</div>
      </div>
      <div id="snapshot_movements">
        <% @movements.each do |movement| %>
        <div class="movement_line">
          <%= check_box_tag 'movements', movement.id, true, disabled: :true %><span><%= movement.name %></span></div>
        <% end %>
      </div>
    </div>
    <div id="snapshot_movements_submit"><%= submit_tag 'Update Chart', class: 'large_gray' %></div>
  <% end %>
</div>
