<%- current_snapshot_id = 0 unless current_snapshot_id.present? %>
<%- active = false unless active.present? %>
<div class="saved_visual_tool_line <%= 'active' if active || current_snapshot_id.to_i == saved_visual_tool.id %>" id="snapshot_<%= saved_visual_tool.id %>">
  <span><%= link_to saved_visual_tool.name, snapshot_charts_path(id: saved_visual_tool.id) %></span>
  <div class="saved_visual_tool_delete">
    <%= link_to 'x', delete_snapshot_charts_path(id: saved_visual_tool.id), remote: true, method: 'post', confirm: "Delete saved Snapshot?" %>
  </div>
</div>