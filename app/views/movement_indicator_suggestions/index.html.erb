<div class="titlebar titlebarmod">
  <h1><%= t('.title', org_name: current_organization) %></h1>
</div>
<% if current_organization.importable_type == 'Ccc::MinistryActivity' %>
<div id="suggestions_feed">
  <h2 class="fancy">
    <%= t('.list_heading') %>
    <%= tip(t('.guide')) %>
  </h2>
  <div class="feed_panel" >
    <div class="feed_panel_top">
      <ul id="panel_nav"></ul>
    </div>
    <div class="feed_content acenter">
      <table border="0" width="100%">
        <tbody id="suggestions">
          <tr>
            <td colspan="3" class='loader-space'>
              <%= image_tag 'loader.gif'%>
              <br/>
              <%= t('.fetching') %>
            </td>
          </tr>
        </tbody>
      </table>

      <div id="declined_suggestions" style="<%= 'display:none;' if MovementIndicatorSuggestion.fetch_declined(current_organization).count == 0%>">
        <%= link_to(t('.show_old'), '#', id: 'show_old') %>
      </div>

      <div class="suggestions_buttons">
        <%= link_to raw("<button class='large_gray' id='suggestions_next_button'>#{t('welcome.wizard.next')}</button>"), movement_indicators_path %>
        </button>
      </div>
    </div>
  </div>
<% else %>
  <p>
    This <%= ENV['SITE_TITLE'] %> organization does NOT have a corresponding movement in the Infobase to
    report your movement indicators.  Only movements can report movement indicators, not
    teams or self created organizations.
  </p>
<% end %>
