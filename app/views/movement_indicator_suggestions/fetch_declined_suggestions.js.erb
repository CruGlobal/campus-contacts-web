$(".declined_suggestion").remove()

$('tbody#suggestions').append("<%= j(render('suggestions', suggestions: @suggestions)) %>")

$('#declined_suggestions').hide()
$('#no_movement_indicator_suggestion').remove()

$('.link_to_accept_all_movement_indicator_suggestions').show()
if($('.link_to_accept_all_movement_indicator_suggestions').size() > 1){
  $('.link_to_accept_all_movement_indicator_suggestions').last().remove()
}

if(!$('#accept_all_suggestions_link').hasClass('include_declined')){
  url = $('#accept_all_suggestions_link').attr('href')
  $('#accept_all_suggestions_link').addClass('include_declined')
  $('#accept_all_suggestions_link').attr('href', url + '?include_declined=true')
}