<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <title>Survey Response Visualizer</title>
    <%= stylesheet_link_tag 'survey_responses_live.css' %>
    <link href='https://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <%= javascript_include_tag 'survey_responses_live' %>
  </head>

  <body>

    <div id="header">
      <div class="wrapper">
        <div id="header-button"></div><span id="header-title">SURVEY RESPONSE DATA for <%= current_organization %></span>
      </div>
    </div>

    <div class="leftMenu">
      <div class="leftMenuHeader">SURVEYS</div>
      <div id="upper"></div>
      <div class="leftMenuHeader">QUESTIONS</div>
      <div id="lower"></div>
    </div>

    <div class="wrapper">
      <span id="question-title">CHOOSE A QUESTION...</span>
      <div id="scroller-container">
        <table id="scroller" cellspacing="10"></table>
      </div>
      <div id="total-responses-container" style="display:none;">Total Responses: <span id="total_responses">0</span>
      </div>

      <span id="api_key" style="display:none"><%= current_organization.api_client.secret %></span>

    </body>

  </html>

