<% provide :title, t('.thanks') %>
<div class="info">
  <center><h4><%= @survey.post_survey_message.present? ? @survey.post_survey_message : t('contacts.thanks.message') %></h4></center>
	<br><br>

  <% if mhub? && user_signed_in? %>
  	<script type="text/javascript">
			FB.logout();
  	</script>
  <% end %>
	<div id="countdown">
		<center>
		  <% if cookies[:survey_mode].present? %>
		    <% survey_url = contact_form_url(@keyword.keyword) %>
  		  <% if user_signed_in? %>
    			<h4><%= t('contacts.thanks.facebook')%></h4>
    			<br><br>
    			<h3><%= link_to(t('contacts.thanks.done'), sign_out_path(next: survey_url), onclick: 'FB.logout()', data: {ajax: false}) %></h3>
    	  <% else %>
  			  <h3><%= link_to(t('contacts.thanks.done'), survey_url) %></h3>
  			<% end %>
  		<% end %>
		</center>
	</div>
</div>
