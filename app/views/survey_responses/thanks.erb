<% provide :title, t('.thanks') %>
<div class="info">
  <center><h4><%=raw @survey.post_survey_message.present? ? give_link(auto_link(@survey.post_survey_message)) : t('contacts.thanks.message') %></h4></center>
	<br><br>

	<div id="countdown">
		<center>
		  <% if cookies[:survey_mode].present? %>
		    <% survey_url = start_survey_url(@survey) %>
  		    <% if user_signed_in? %>
            <h4><%=raw t('contacts.thanks.facebook')%></h4>
            <br><br>
            <h3><%= link_to(t('contacts.thanks.done'), sign_out_url(next: survey_url), data: {ajax: false}) %></h3>
    	    <% else %>
  			   <h3><%= link_to(t('contacts.thanks.done'), survey_url, data: {ajax: false}) %></h3>
  	       <% end %>
  		  <% end %>
		</center>
	</div>
</div>
