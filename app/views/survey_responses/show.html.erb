<% provide :sidebar do %>
  <%= render :partial => 'people/left_sidebar' %>
<% end %>
<div class="titlebar">
  <h1>
    <%= image_tag("contact.png") %>
    <%= t('.title', name: @person) %>
  </h1>
</div>
<div class="pad">
  <div id="survey_answers">
    <ul>
      <% current_organization.question_sheets.flatten.uniq.each do |qs| %>
        <% answer_sheet = @person.answer_sheets.detect {|as| qs.id == as.question_sheet_id} %>
        <% qs.all_questions.each do |q| %>
          <% answer = q.display_response(answer_sheet) %>
          <% if answer.present? %>
            <li><%= q.label %><%= ':' unless q.label[-1] =~ /\.;:\?/ %> <%= answer %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
  <%= link_to(t('.edit_answers'), edit_survey_response_path(@person)) %>
</div>