<tr class="table_content">
  <td class="table_cell receiver">
    <%= message.receiver.name if message.receiver %>
    <span class="to">
      - <%= message.to.downcase %>
    </span>
  </td>
  <td class="table_cell info">
    <%= wiser_date(message.created_at) %>
  </td>
</tr>
<tr class="table_message">
  <td colspan="2" class="table_cell msg"><%= message.message %></td>
</tr>
