<div id="profile_permissions_dialog" style="display:none;" class="custom_mh_popup_box">
  <div class="ui-widget-overlay pop_box_overlay_container"></div>
  <div class="pop_box_container">
    <div class="mh_popup_box permissions_popup_box">
    	<div class="mh_popup_box_top"><span class="mh_popup_heading">Permissions</span></div>
    	<div class="fancy">
        Apply selected permission to
        <span class="selected_contacts_name"><%= @person.name %></span>:
      </div>
    	<div class="permissions_chooser_box" id="permissions_chooser_box">
        <% current_permission_ids = Array.new %>
        <% @permissions_for_assign.each do |permission| %>
          <% if @permissions.present? && @permissions.include?(permission) %>
            <% current_permission_ids << permission.id %>
            <% checked = true %>
          <% else %>
            <% checked = false %>
          <% end %>

          <%= render partial: 'shared/permission', locals: {permission: permission, checked: checked} %>
        <% end %>
    	</div>


    	<div class="permissions_save" id="permissions_save">
    		<button class="red_accent" id="permissions_popup_save_button">Save</button>
    		<button class="large_lightgray mh_popup_cancel_button" id="">Cancel</button>
    	</div>

    </div>
  </div>
</div>