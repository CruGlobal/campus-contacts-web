<div id="bulk_vcard_dialog" style="display:none;" class="custom_mh_popup_box">
  <div class="ui-widget-overlay" style="position: fixed; width: 100%; height: 100%; z-index: 999; "></div>
  <div class="pop_box_container">
    <div class="mh_popup_box" class="ui-dialog ui-widget ui-widget-content ui-corner-all ui-draggable" tabindex="-1" permission="dialog" aria-labelledby="ui-dialog-title-alert_dialog" id="bulk_vcard_dialog_box">
    	<div class="mh_popup_box_top">
        <span class="mh_popup_heading">
          <%= t('contacts.index.bulk_vcard_dialog_title') %>
        </span>
      </div>
      <div class="fancy">
        <%= t('contacts.index.bulk_vcard_dialog_desc') %>
      </div>
      <div class="mh_popup_box_content" id="bulk_vcard_dialog_content">
        <%= form_tag bulk_create_vcards_url, :id => "bulk_vcard_form" do %>
          <div class="field_in">
            <label><%= t('general.email') %></label>
            <div class="in"><%= text_field_tag :bulk_vcard_email, current_person.email %></div>
          </div>
          <div class="field_in">
            <label><%= t('general.note') %></label>
            <div class="in"><%= text_field_tag :bulk_vcard_note, "", "placeholder"=>"Optional"%></div>
          </div>
        <% end %>
      </div>
    	<div class="mh_popup_buttons" id="bulk_vcard_dialog_buttons">
    		<button class="red_accent" id="bulk_vcard_dialog_send_button">Send to Email</button>
    		<button class="red_accent" id="bulk_vcard_dialog_download_button">Download</button>
    		<button class="large_lightgray mh_popup_cancel_button" id="">Cancel</button>
    	</div>
    </div>
  </div>
</div>