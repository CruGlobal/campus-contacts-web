<div id="add_group_label_div" style="display:none" class="custom_mh_popup_box">
  <div class="ui-widget-overlay pop_box_overlay_container"></div>
  <div class="pop_box_container">
    <div class="mh_popup_box assign_popup_box">
    	<div class="mh_popup_box_top">
        <span class="mh_popup_heading">
          <%= t('groups.add_a_label') %>
        </span>
      </div>
      <div id="add_group_label_loader" style="display:none;" align="center">
        <%= image_tag 'loader.gif' %><br/>Loading...
      </div>
      <div class="mh_popup_box_content add_group_label_content" id="mh_popup_box_content" align="center">
        <br/>
        <%= form_for GroupLabel.new, remote: true, validate: true do |f| %>
          <table>
            <tr>
              <td><%= t('groups.label_name') %></td>
              <td class="field"><%= f.text_field :name %></td>
            </tr>
          </table>
        <% end %>
      </div>
    	<div class="assign_save" id="assign_save">
    		<button class="red_accent assign_button" id="add_group_label_save_button">Add</button>
    		<button class="large_lightgray mh_popup_cancel_button">Cancel</button>
    	</div>
    </div>
  </div>
</div>