<div id="saved_search_div" style="display:none" class="custom_mh_popup_box">
  <div class="ui-widget-overlay pop_box_overlay_container"></div>
  <div class="pop_box_container">
    <div class="mh_popup_box assign_popup_box">
    	<div class="mh_popup_box_top">
        <span class="mh_popup_heading" id="saved_search_title">
          <%= t('contacts.index.save_this_search') %>
        </span>
      </div>
      <div id="add_saved_search_loader" style="display:none;" align="center">
        <%= image_tag 'loader.gif' %><br/>Loading...
      </div>
      <div class="mh_popup_box_content add_label_content" id="mh_popup_box_content" align="center">
        <br/>
        <%= form_for(@saved_contact_search, html: {id: 'save_search_form'}) do |f| %>
          <%= f.hidden_field :full_path, :value => request.fullpath %>
          <%= f.hidden_field :organization_id, :value => current_organization.id %>
          <%= hidden_field_tag :saved_contact_search_id, @saved_contact_search.id %>
          <table>
            <tr>
              <td class="field"><%= f.text_field :name, :placeholder => t('contacts.index.save_this_search_placeholder') %></td>
            </tr>
          </table>
        <% end %>
      </div>
    	<div class="assign_save">
    		<button class="red_accent assign_button" id="add_saved_search_button">Submit</button>
    		<button class="large_lightgray mh_popup_cancel_button">Cancel</button>
    	</div>
    </div>
  </div>
</div>