<div id="profile_labels_dialog" style="display:none;"  class="custom_mh_popup_box">
  <div class="ui-widget-overlay" style="position: fixed; width: 100%; height: 100%; z-index: 999; "></div>
  <div class="pop_box_container">
    <div class="mh_popup_box labels_popup_box" class="ui-dialog ui-widget ui-widget-content ui-corner-all ui-draggable" tabindex="-1" permission="dialog" aria-labelledby="ui-dialog-title-alert_dialog">
    	<div class="mh_popup_box_top"><span class="mh_popup_heading">Labels</span></div>
    	<div class="fancy">
        Apply the following labels to
        <span class="selected_contacts_name"><%= @person.name %></span>:
      </div>
    	<div class="labels_chooser_box" id="labels_chooser_box">
        <% current_label_ids = Array.new %>
        <% @labels_for_assign.each do |label| %>
          <% if @labels.present? && @labels.include?(label) %>
            <% current_label_ids << label.id %>
            <% checked = true %>
          <% else %>
            <% checked = false %>
          <% end %>

          <%= render partial: 'interactions/label', locals: {label: label, checked: checked} %>
        <% end %>
    	</div>
  		<div class="labels_add_new" id="labels_add_new">
        <%= text_field_tag :label_new_input, "", id: "labels_new_input", placeholder: "Create a new label..."%>
  			<div class="add_new_button">
  				<a href="#"><button class="add_gray tip" title="Save Label" id="labels_add_new_button"></button></a>
  			</div>
  		</div>
      <div class="labels_notice" id="labels_notice"></div>


    	<div class="labels_save" id="labels_save">
    		<button class="red_accent" id="labels_popup_save_button">Save</button>
    		<button class="large_lightgray" id="labels_popup_cancel_button">Cancel</button>
        <%= link_to raw("<button class='large_gray' id='labels_popup_manage_button'>Manage Labels</button>"), labels_path(organization: current_organization.id) %>
    	</div>

    </div>
  </div>
</div>