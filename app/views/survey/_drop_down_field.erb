<% name = defined?(survey) ? "answers[#{survey.id}][#{drop_down_field.id}]" : "answers[#{drop_down_field.id}]" %>
<% person ||= nil %>
<% value = @checked_or_val.present? ? @checked_or_val : drop_down_field.response(answer_sheet, person).to_s %>
<%= select_tag name, 
      options_for_select([["Choose One", '']] + drop_down_field.choices, value), 
      :class => 'select ' + drop_down_field.validation_class(answer_sheet), 
      :id => dom_id(drop_down_field) %>
