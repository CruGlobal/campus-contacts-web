<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

<!-- Mobile viewport optimization h5bp.com/ad -->
<meta name="HandheldFriendly" content="True">
<meta name="viewport" content="width=device-width, initial-scale=1., maximum-scale=1">
<link href='https://fonts.googleapis.com/css?family=Montserrat:400,700|Titillium+Web:400,400italic,600,600italic' rel='stylesheet' type='text/css'>

<!-- Mobile IE allows us to activate ClearType technology for smoothing fonts for easy reading -->
<!--[if IEMobile]>
  <meta http-equiv="cleartype" content="on">
<![endif]-->

<!--[if lt IE 9]>
<script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<script>window.html5 || document.write('<script src="js/vendor/html5shiv.js"><\/script>')</script>
<![endif]-->

<title><%= @title || (mhub? ? 'Take a Survey' : ENV['SITE_TITLE']) %></title>

<%= stylesheet_link_tag 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css' %>
<%= stylesheet_link_tag 'welcome' %>

<% if Rails.env.development? %>
  <%= javascript_include_tag 'jquery-1.7.2.min.js' %>
  <%= javascript_include_tag 'jquery-ui-1.8.12.js' %>
<% else %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/jquery-ui.js" type="text/javascript"></script>
<% end %>

<link rel="icon" type="image/png" href="<%= image_path("favicon.png") %>">

<%#= javascript_include_tag 'application' %>
<%= javascript_include_tag 'bootstrap' %>

<%= csrf_meta_tag %>

<script type="text/javascript" charset="utf-8">
  $.params = <%= raw params.dup.keep_if {|_k, v| v.is_a?(String) || v.is_a?(Numeric) || v.is_a?(Enumerable)}.to_json %>;
  if (window.location.hash == '#_=_') window.location.hash = '';
</script>

<%= render 'google_analytics' %>
