<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

<!-- Mobile viewport optimization h5bp.com/ad -->
<meta name="HandheldFriendly" content="True">
<meta name="viewport" content="width=device-width,initial-scale=1.0">

<!-- Mobile IE allows us to activate ClearType technology for smoothing fonts for easy reading -->
<!--[if IEMobile]>
  <meta http-equiv="cleartype" content="on">
<![endif]-->

<title><%= @title || (mhub? ? 'Take a Survey' : 'MissionHub') %></title>

<% if Rails.env.development? %>
  <%= javascript_include_tag 'jquery-1.7.2.min.js' %>
  <%= javascript_include_tag 'jquery-ui-1.8.12.js' %>
<% else %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/jquery-ui.js" type="text/javascript"></script>
<% end %>

<script type="text/javascript">if (window.location.hash == '#_=_')window.location.hash = '';</script>

<%= stylesheet_link_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css" %>

<%= stylesheet_link_tag 'welcome' %>

<link rel="icon" type="image/png" href="<%= image_path("favicon.png") %>">

<%#= javascript_include_tag 'application' %>
<%= javascript_include_tag 'bootstrap' %>

<script type="text/javascript" charset="utf-8">
  I18n.defaultLocale = "<%= I18n.default_locale %>";
  I18n.locale = "<%= I18n.locale %>";
</script>

<%= csrf_meta_tag %>

<script type="text/javascript" charset="utf-8">
  $.params = <%= raw params.dup.keep_if {|k, v| v.is_a?(String) || v.is_a?(Numeric) || v.is_a?(Enumerable)}.to_json %>;
</script>

<%= render 'google_analytics' %>