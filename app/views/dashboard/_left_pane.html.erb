<div class="dash_links">
  <div class="dash_link">
    <div class="dash_icon">
      <%= image_tag('dashicon_contact.png')%>
    </div>
    <div class="dash_content">
      <%= link_to "See All Contacts", "/allcontacts" %>
      <br/>
      <%= link_to "Add New Contact", "/allcontacts?click=allcontacts_add_contact_button" %>
    </div>
  </div>

  <hr class="dash_divider"/>

  <div class="dash_link">
    <div class="dash_icon">
      <%= image_tag('dashicon_group.png')%>
    </div>
    <div class="dash_content">
      <%= link_to "Create A New Group", "/groups/new" %>
      <br/>
      <%= link_to "Manage Existing Groups", "/groups" %>
    </div>
  </div>
  <hr class="dash_divider"/>

  <div class="dash_link">
    <div class="dash_icon">
      <%= image_tag('dashicon_mail.png')%>
    </div>
    <div class="dash_content">
      <%= link_to "Send Text Message", "/allcontacts?click=action_menu_text" %>
      <br/>
      <%= link_to "Send Email Message", "/allcontacts?click=action_menu_email" %>
    </div>
  </div>
</div>
<div class="dash_links lower_box">
  <div class="lower_box_title">
    Here's what in your hub!
  </div>
  <% if can? :manage, current_organization %>
    <div class="lower_box_item">
      <div class="lower_box_count">
        <%= current_person.primary_organization.present? ?
          current_person.primary_organization.active_keywords.count : 0 %>
      </div>
      <div class="lower_box_link">
        <%= link_to "Active Keywords", "/sms_keywords" %>
      </div>
    </div>
    <div class="lower_box_item">
      <div class="lower_box_count">
        <%= current_person.primary_organization.present? ?
          current_person.primary_organization.surveys.count : 0 %>
      </div>
      <div class="lower_box_link">
        <%= link_to "Active Surveys", "/surveys/index_admin" %>
      </div>
    </div>
    <div class="lower_box_item">
      <div class="lower_box_count">
        <%= current_person.primary_organization.present? ?
          current_person.primary_organization.groups.count : 0 %>
      </div>
      <div class="lower_box_link">
        <%= link_to "Groups Under Your Leadership", "/groups" %>
      </div>
    </div>
    <div class="lower_box_item">
      <div class="lower_box_count">
        <%= current_person.primary_organization.present? ?
          current_person.primary_organization.children.count : 0 %>
      </div>
      <div class="lower_box_link">
        <%= link_to "Sub-organizations of #{current_organization}", "/organizations" %>
      </div>
    </div>
  <% end %>
</div>
