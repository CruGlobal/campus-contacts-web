<div class="dash_title">
	<span>
		<%= t('dashboard.panel_messaging') %>
	</span>
</div>
<div class="dash_image">
	<%= image_tag("dash_messaging.png") %>
</div>
<div class="dash_buttons">
	<%= link_to("/contacts?click=send_bulksms_link_new", :class => "button") do %>
		<div>
			<%= image_tag("dash_button_icon_text.png") %>
			<div class="mod">
				<p>
					<span class="primary"><%= t('dashboard.button_text_sub') %></span>
					<br/>
					<span class="secondary"><%= t('dashboard.button_text') %></span>
				</p>
			</div>
		</div>
	<% end %>
	<%= link_to("/contacts?click=send_bulkemail_link_new", :class => "button") do %>
		<div>
			<%= image_tag("dash_button_icon_email.png") %>
			<div class="mod">
				<p>
					<span class="primary"><%= t('dashboard.button_email_sub') %></span>
					<br/>
					<span class="secondary"><%= t('dashboard.button_email') %></span>
				</p>
			</div>
		</div>
	<% end %>
	<%= link_to("/contacts?click=sent_messages_link", :class => "button") do %>
		<div>
			<%= image_tag("dash_button_icon_messages.png") %>
			<div class="mod">
				<p>
					<span class="primary"><%= t('dashboard.button_sent') %></span>
					<br/>
					<span class="secondary"><%= t('dashboard.button_sent_sub') %></span>
				</p>
			</div>
		</div>
	<% end %>
</div>
<%= link_to("Help Me", "http://blog.missionhub.com", :target => "_blank", :class => "helpme") %>