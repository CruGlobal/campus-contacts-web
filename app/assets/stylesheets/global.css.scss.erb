/* Fonts */
$font-base: Tahoma, Arial;
$font-secondary: Arial, Verdana;

/* Colors */
$blue: #0379AE;
$light-blue: #eaf1f6;
$light-gray: #F2F2F2;
$white: #fff;

/* Divs */
$maxpagewidth: 11000px;
$minpagewidth: 960px;

@mixin clearlist {
  list-style: none;
  margin: 0;
  padding: 0;
  li {
    display: inline-block; 
  }
}

/* Elements */
a, a:visited {
  color: $blue;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

.clear {
  clear: both;
}


body {
  font-family: $font-base;
  background: $white;
  margin: 0;
  font-size: 12px;
}



.titlebar {
  background: $white;
  padding: 14px;
  h1 {
    font-family: $font-base;
    font-size: 16px;
    margin: 0;
  }
  h1 img {
    margin-right: 5px;
  }
}

#outer {
  max-width: $maxpagewidth;
  min-width: $minpagewidth;
  padding: 0 15px;
  margin: 0 auto;
}

#global {
  text-align: right;
  font-size: 11px;
  height: 28px;
  line-height: 28px;
  .item {
    display: inline-block;
    border-left: 1px solid $blue;
    height: 18px;
    line-height: 18px;
    >a {
      padding: 5px;
      text-decoration: none;
    }
  }
  .item:first-child {
    border-left: none;
  }
}

#topmenu {
  background: url('<%= asset_path('topmenubg.png') %>') repeat-x;
  border-radius: 0;
  height: 38px;
  a {
    border-right: 1px solid #FFFFFF;
    color: $white;
    line-height: 38px;
    padding: 0 13px;
    font-size: 11px;
  }
  ul {
    @include clearlist;
  }
}

#left {
  float: left;
  width: 205px;
  #logo {
    background: url('<%= asset_path('logo.png') %>') no-repeat;
    display: inline-block;
    width: 166px;
    height: 41px;
    margin-bottom: 10px;
    margin-left: 15px;
  }
}

.block {
  /* border-bottom: 1px solid $blue; */
}

ul.leftmenu {
  @include clearlist;
  font-size: 11px;
  h3 {
    margin: 0;
    font-size: 12px;
  }
  ul.indent {
    @include clearlist;
    margin: 0 0 0px 10px;
    padding: 0;
    font-size: 11px;
    li a {
      font-weight: normal;
    }
    li {
      display: block;
    }
  }
  li {
    display: block;
    a, h3 {
      display: block;
      line-height: 24px;
      padding-left: 10px;
      height: 24px;
    }
    > a {
      font-weight: bold;
    }
  }
  > li {
    padding-right: 15px;
  }
  li.selected {
    background: $light-gray;
    > a {
      background: $light-gray;
    }
  }
  a.delete_leader {
    float: right;
    background: silver;
    color: $white;
    width: 12px;
    height: 12px;
    line-height: 9px;
    margin-top: 6px;
    text-align: center;
    font-weight: bold !important;
    padding: 0;
  }
  a.delete_leader:hover {
    background: $blue;
    text-decoration: none;
  }
  .name {
    display: inline-block;
  }
  .listaction {
    float: right;
    font-size: 10px;
    font-weight: normal;
    img {
      vertical-align: middle;
    }
  }
}

#main {
  margin-left: 205px;
}


#rest {
  background: url('<%= asset_path('linebg.png') %>') repeat-y 0% 0%;
}

.pad {
  padding: 0 0 0 15px;
}

.carea {
  padding-bottom: 20px;
  margin-left: 1px;
}

.contentpad {
  padding: 14px;
}

/* WIZARDRY */

.wizard {
  #rest {
    background: none;
  }
}

.wizard_steps {
  margin-right: 10px;
  div.wizard_step {
    line-height: 30px;
    height: 30px;
    border: 1px solid #c1ddef;
    padding: 0 8px;
    margin-bottom: 3px;
    background-image: -webkit-gradient(
      linear,
      left top,
      left bottom,
      color-stop(0.49, rgb(255,255,255)),
      color-stop(0.88, rgb(234,241,246))
    );
    background-image: -moz-linear-gradient(
      center top,
      rgb(255,255,255) 49%,
      rgb(234,241,246) 88%  
    );
  }
  .wizard_step_active,
  .wizard_step_name,
  .wizard_step_visited,
  .wizard_step_not_visited {
    display: inline-block;
  }
  .wizard_step_visited {
    background: url('<%= asset_path('check_complete.png') %>') no-repeat scroll 0 50% transparent;
    float: right;
    height: 30px;
    vertical-align: middle;
    width: 22px;
  }
  .wizard_step_not_visited {
    background: url('<%= asset_path('check_incomplete.png') %>') no-repeat scroll 0 50% transparent;
    float: right;
    height: 30px;
    vertical-align: middle;
    width: 22px;
  }
  .wizard_step_active,
  .wizard_step_inactive {
    width: 4px;
    margin-right: 9px;
    height: 30px;
    background: url('<%= asset_path('blue_arrow.png') %>') no-repeat 0 50%;
    display: inline-block;
    float: left;
  }
  .wizard_step_inactive {
    background: none;
  }
}

.wizard {
  margin: 17px 0 0 0px;
  border: 1px solid #c1ddef;
  padding: 15px;
}

.btn {
  background: url('<%= asset_path('btn.png') %>') repeat-x scroll 0 0 transparent;
  border: 1px solid silver;
  box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);
  color: #000000;
  display: inline-block;
  height: 24px;
  line-height: 24px;
  min-width: 27px;
  padding: 0 12px;
  text-align: center;
  text-decoration: none;
  font-weight: bold;
}

.btn.disabled {
  opacity: .5;
  font-weight: normal;
}

/* CONTACTS */

.mine {}

.contacts-main {
  width: 100%;
  th {
    text-align: left;
    background: #c7dff0;
    padding: 3px 2px;
  }
  .check {
    width: 30px;
    padding-left: 15px !important;
    text-align: left;
  }
  tr td{
    border-bottom: 1px solid silver;
    padding: 3px 2px;
    font-size: 12px;
  }
  tr:hover {
    background: #f5ffc4;
    cursor: pointer;
  }
  td.controls {
    width: 75px;
  }
  td.name {
    width: 40%;
  }
  .checkbox_cell {
    width: 50px;
  }
}

a.hide {
  img {
    vertical-align: middle;
  }
}

.contact_leftcol {
  float: left;
}

.maplink {
  background: url("<%= asset_path('pin.png') %>") no-repeat 0 50%;
  padding-left: 20px;
}

.contact_rightbody {
  margin-left: 220px;
}

.statusline {
  background: $light-blue;
  display: block;
  padding: 5px 10px;
  font-weight: bold;
}

.commentbox {
  background: $light-gray;
  padding: 5px;
  textarea {
    width: 100%;
    height: 100%;
    resize: none;
    padding: 0px;
    border: none;
  }
  .textarea {
    border: 1px solid silver;
    padding: 5px;
    background: $white;
    margin-bottom: 5px;
  }
  input[type=submit] {
    float: right;
  }
}

input[type=submit] {
  background: none repeat scroll 0 0 #0379AE;
  border: 1px solid #000000;
  border-radius: 5px 5px 5px 5px;
  box-shadow: 0 0 1px #FFFFFF inset;
  color: white;
  font-size: 12px;
  line-height: 22px;
  padding: 4px 8px;
  vertical-align: top;
  font-weight: bold;
}

.rejoiceablebox {
  background: $white;
  border: 1px solid silver;
  border-radius: 3px 3px 3px 3px;
  display: inline-block;
  padding: 4px 8px;
}

.rejoicables,
.commentswall .rejoiceables {
  @include clearlist;
  border: none;
  margin: 3px 0;
  li{
    border: 1px solid orange;
    padding: 0px 3px;
    margin-right: 0px;
    border-radius: 5px;
    background: #FFF4D7;
  }
}

.commentswall {
  h3 {
    margin-bottom: 0px;
    font-weight: normal;
    color: gray;
  }
  ul#previous_comments {
    @include clearlist;
    > li {
      border-bottom: 1px solid #ccc;
      display: block;
      padding: 10px 35px 10px 0px;
    }
    a.profilepic {
      float: left;
      margin-right: 10px;
    }
    .commentcontent {
      display: table-cell;
      vertical-align: top;
      height: 50px;
      p {
        margin: 0;
        line-height: 1.25em;
        font-size: 12px;
      }
      .meta {
        font-size: 12px;
      }
      .status {
        color: $blue;
      }
      .date {
        color: silver;
      }
    }
  }
}

.pagemenu {
  background: $light-blue;
  padding: 6px 14px 3px;
}

ul.pillmenu {
  @include clearlist;
}
ul.pillmenu {
  height: 24px;
  display: inline-block;
  border: 1px solid #808080;
  margin-right: 8px;
  border-radius: 5px;
  background: url('<%= asset_path('pillbg.png') %>') repeat-x;
  overflow: hidden;
  li {
    border-right: 1px solid #666;
    border-left: 1px solid #fff;
    margin: 0;
    padding: 0;
    float: left;
    display: block;
    a {
      padding: 0 9px;
      line-height: 24px;
      height: 24px;
      color: #000;
      font-weight: bold;
      font-size: 12px;
      display: block;
    }
    a:hover {
      background: url('<%= asset_path('pillbg_over.png') %>') repeat-x;
      text-decoration: none;
    }
  }
  li:first-child {
    border-left: 0px;
  }
  li:last-child {
    border-right: 0px;
  }
  li.disabled {
    a {
      color: silver;
    }
  }
}



#hidden_questions_div {
  background: $white;
  padding: 6px;
  margin: 10px 0;
  ul#hidden_questions {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  li {
    background: url("<%= asset_path('li.png') %>") no-repeat 0 50%;
    padding-left: 13px;
  }
}

.icon {
  background: url("<%= asset_path('delete.png') %>") no-repeat 50% 50%;
  text-indent: -1000px;
  overflow: hidden;
  width: 16px;
  display: inline-block;
}

.icon.magnify {  background-image: url("<%= asset_path('magnify.png') %>");}
.icon.unassign {  background-image: url("<%= asset_path('undo.png') %>");}
.icon.delete {  background-image: url("<%= asset_path('delete.png') %>");}
.icon.edit {  background-image: url("<%= asset_path('edit_sm.png') %>");}
.icon.check {  background-image: url("<%= asset_path('check.png') %>");}


/* SPLASH PAGE */

.splash {
