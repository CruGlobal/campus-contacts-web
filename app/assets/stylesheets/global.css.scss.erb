/* MODAL STYLES */
.modalfield {
  margin-bottom: 5px;
}

.modalresults {
  border: 1px solid gray;;
  padding: 8px;
  margin-top: 20px;
}

.modalresults ul {
  list-style: none;
  margin: 0;
  padding: 0;
  height: 144px;
  border: 1px solid silver;
  overflow-x: hidden;
  overflow-y: scroll;
  li a {
    display: block;
    height: 24px;
    line-height: 24px;
    padding-left: 2px;
    color: $blue;
  }
  li a:hover {
    text-decoration: none;
    background: #F5FFC4;
  }
}

.inlinebutton {
  background: $blue;
  color: $white !important;
  background: none repeat scroll 0 0 #0379AE;
  border: 1px solid gray;
  box-shadow: 0 0 1px #FFFFFF inset;
  font-size: 11px;
  font-weight: normal;
  padding: 1px 3px;
    
}

/* KEYWORDS */
.keywordtable {
  td.controls {
    width: 145px;
  }
}

#sms_keyword_keyword, .keywordname {
  font-size: 18px;
  border: 1px solid gray;
  box-shadow: 0 0 4px #999;
  padding: 5px;
  font-weight: bold;
}

.keywordname {
  color: gray;
  width: 300px;
  margin-bottom: 10px;
  background: #f0f0f0;
}


/* FORM */

.field {
  margin-bottom: 10px;
  label {
    margin-bottom: 5px;
    display: block;
  }
}

.inlineform {
  border: 1px solid gray;
  padding: 8px;
  margin-top: 10px;
  margin-bottom: 10px;
}

/* SORTABLE ROWS */
.ui-sortable {
  tr:hover {
    cursor: move;
  }
  .ui-sortable-helper {
    background: #fcf0b9;
    border: 1px dotted #eca700;
    height: 20px;
  }
  td {
    padding: 3px;
  }
}
.questiontitle {
  min-width: 150px;
  padding-left: 5px;
}

.ui-sortable tr:hover {
  background: #fcf0b9;
  border: 1px dotted #eca700;
  height: 20px;
  td.questiontitle {text-indent: 10px;}
}

#change_org.on {
  background: $blue;
  color: #fff;
}

#other_orgs {
  display: block;
  position: absolute;
  margin-top: 3px;
  text-align: left;
  background: $blue;
  padding: 2px;
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  label {
    width: 150px;
    display: inline-block;
  }
  .icon {
    vertical-align: bottom;
  }
  li {
    padding: 5px;
    background: #fff;
  }
  li:hover {
    background: #F5FFC4;
  }
}