@import "colors.scss";

.topmenu.topmenu-with-sub {
  margin-bottom: 0;
}

.dashboard-subnav {
  background: $pivot-muted-blue;
  margin-bottom: 40px;
  height: 48px;
  line-height: 48px;

  a, a:visited {
    color: $pivot-muted-dark-blue;
    display: inline-block;
    &.active {
      cursor: default;
      color: $pivot-dark-blue;
    }
  }

  .dashboard-mode-toggle, .dashboard-timeframe-toggle {
    display: inline-block;
  }

  .dashboard-mode-toggle {
    font-size: 20px;
    a {
      padding: 0 13px;
    }
  }

  .dashboard-timeframe-toggle {
    float: right;
    a {
      padding: 0 4px;
    }
  }
}

#dashboard_panels, .dashboard-subnav .inner {
  margin: 0 auto;
  width: 948px;
  font-family: "Titillium Web", sans-serif;
  color: $pivot-dark-blue;
  font-size: 14px;
}
