#dashboard_main {
	padding: 0;
	
	h1 {
		margin-bottom: 40px;
		font-family: Georgia;
		font-size: 21px;
		font-style: italic;
		font-weight: normal;
		color: #808284;
	}
	
	#dashboard_panels {
		text-align: center;
		vertical-align: top;
		width: 816px;
		margin: 0 auto;
		
		#panel_separator {
			display: block;
			float: left;
			width: 272px;
			
			#panel_bg {
				height: 280px;
				border-left: 1px solid #eaf1f6;
				border-right: 1px solid #eaf1f6;
			}
		}
		
		.dash_panel {
			float: left;
			width: 144px;
			margin: 0 64px;
			
				.dash_title {
					margin: 0 auto 30px auto;
					display: block;
					background: url("<%= asset_path('dash_brackets.png') %>");
					width: 116px;
					height: 33px;
					font-family: Georgia;
					font-size: 14px;
					font-style: italic;
					color: #3594be;
					
					span {
						margin: 0 auto;
						display: block;
						width: 75%;
						text-align: center;
					}
				}
				
				.dash_image {
					margin: 0 auto 36px auto;
					display: block;
					width: 144px;
					height: 160px;
				}
				
				.dash_buttons {
					margin: 0 auto;
					width: 144px;
					
					a.button {
						padding: 0.53em 0;
						margin: 0;
						display: block;
						width: 142px;
						border: 1px solid #0379ae;
						color: #ffffff;
						font-family: Helvetica;
						font-style: bold;
						font-size: 21px;
						background-color: #3594be;
						background: #3594be url("<%= asset_path('grad_button.png') %>") repeat-x;
						vertical-align: middle;
						text-decoration: none;
						-moz-box-shadow: 1px 1px 5px 0px #555;
						-webkit-box-shadow: 1px 1px 5px 0px #555;
						box-shadow: 0 1px 5px 0px #555;
						text-shadow: 0 -1px 1px #555;
					}
					
					a.button:hover {
						background-color: #c5d96e;
						border: 1px solid #94a353;
					}
					
					.whatsthis {
						position: relative;
						top: -2.8em;
						left: 13em;
						height: 8px;
						width: 8px;
						color: #0379ae;
					}
				}
		}
		
		#dashboard_left {
			float: left;
			width: 300px;
			
			.dash_links {
				border: 1px solid #ccc;
				background: #F0F0F0;
				-webkit-border-radius: 9px;
				-moz-border-radius: 9px;
				border-radius: 9px;
				margin-bottom: 15px;
				
				.dash_link {
					padding: 10px 10px;
					height: 64px;
					
					.dash_icon {
						width: 64px;
						height: 64px;
						float: left;
						margin-right: 20px;
					}
					
					.dash_content {
						text-align: left;
						height: 64px - 20px;
						line-height: 22px;
						vertical-align: middle;
						padding: 10px;
						
						a {
							font-size: 14px;
							margin-top: 5px;
							&:hover {
								text-decoration: none;
								opacity: 0.9;
								cursor: pointer;
							}
						}
			
					}
				}
								
				.dash_divider {
					width: 95%;
					margin: 0 auto;
				}
				
				&.lower_box {
					padding: 0 0 10px;
				}
				
				.lower_box_title {
					padding: 10px;
					font-size: 18px;
					text-align: left;
					color: #666;
				}
				
				.lower_box_item {
					padding: 0px 15px 4px;
					height: 25px;
					
					.lower_box_count {
						background: #008db7;
						width: 26px;
						height: 22px;
						float: left;
						padding: 4px 0 0 0;
						font-size: 14px;
						text-align: center;
						vertical-align: middle;
						color: #fff;
						margin-right: 10px;
					}
					
					.lower_box_link {
						text-align: left;
						padding: 4px;
						a {
							font-size: 14px;
							&:hover {
								text-decoration: none;
								opacity: 0.9;
								cursor: pointer;
							}
						}
					}
				}
			}
		}
	
		#dashboard_right {
			float: right;
			width: 560px;
			
			#dash_content {
				margin: 20px 0;
				
				.description {
					float: left;
					width: 65%;
					padding: 0 0 20px 0;
					text-align: left;
					
					.title {
						font-weight: bold;
						color: #0379AE;
						font-size: 14px;
					}
					.date {
						color: #0379AE;
						font-size: 13px;
						margin-bottom: 15px;
					}
					.info {
						color: #666;
						font-size: 13px;
						text-align: justify;
					}
				}
			
				.social_buttons {
					float: right;
					width: 34%;
					text-align: right;
				}
			}
		}
	}
}