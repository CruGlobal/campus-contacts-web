@import "colors.scss";

#dashboard_controller {
  background: $background-gray;
}

.topmenu.topmenu-with-sub {
  margin-bottom: 0;
}

.dashboard-subnav {
  background: $white;
  margin-bottom: 40px;
  height: 53px;
  line-height: 53px;

  a, a:visited {
    color: $pivot-dark-blue;
    display: inline-block;
    svg {
      fill: $pivot-dark-blue;
    }
    &.active {
      cursor: default;
      color: $pivot-bright-blue;
      svg {
        fill: $pivot-bright-blue;
      }
    }
  }

  .dashboard-edit-toggle {
    margin-left: 65px;
    height: 53px;
    svg {
      margin-top: 16px;
    }
  }

  .dashboard-mode-toggle, .dashboard-timeframe-toggle, .dashboard-edit-toggle {
    display: inline-block;
  }

  .dashboard-mode-toggle {
    font-size: 20px;
    a {
      padding: 0 13px;
    }
  }

  .dashboard-timeframe-toggle, .dashboard-edit-toggle {
    float: right;
    a {
      padding: 0 4px;
    }
  }

  .dashboard-edit-toggle {
    padding-left: 10px;
    padding-right: 10px;
  }
}

#dashboard_panels, .dashboard-subnav .inner {
  margin: 0 auto;
  width: 948px;
  font-family: "Titillium Web", sans-serif;
  color: $pivot-dark-blue;
  font-size: 14px;
}
