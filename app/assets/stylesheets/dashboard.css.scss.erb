@import "colors.scss";

#dashboard_controller {
  background: $background-gray;
}

.topmenu.topmenu-with-sub {
  margin-bottom: 0;
}

.dashboard-subnav {
  background: $white;
  margin-bottom: 40px;
  height: 53px;
  line-height: 53px;
  position: fixed;
  top: 64px;
  left: 0;
  right: 0;
  z-index: 50;
  box-shadow: 0 0 10px $gray-2;

  a, a:visited {
    color: $pivot-dark-blue;
    display: inline-block;
    &.active {
      cursor: default;
      color: $pivot-bright-blue;
    }
  }

  .dashboard-mode-toggle, .dashboard-timeframe-toggle {
    display: inline-block;
  }

  .dashboard-mode-toggle {
    font-size: 20px;
    a {
      padding: 0 13px;
    }
  }

  .dashboard-timeframe-toggle {
    float: right;
    a {
      padding: 0 4px;
    }
  }
}

#dashboard_panels, .dashboard-subnav .inner {
  margin: 0 auto;
  width: 948px;
  font-family: "Titillium Web", sans-serif;
  color: $pivot-dark-blue;
  font-size: 14px;
}

#dashboard_main {
  margin-top: 140px;
}
