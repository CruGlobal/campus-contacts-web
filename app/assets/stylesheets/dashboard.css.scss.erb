#dashboard_main {
	padding: 0;

	h1 {
		margin-bottom: 40px;
		font-family: Georgia;
		font-size: 21px;
		font-style: italic;
		font-weight: normal;
		color: #808284;
	}

	#dashboard_panels {
		width: 843px;
		margin: 0 auto;

    #dashboard_error {
      text-align: left;
      width: 750px;
      margin: 50px auto;
			font-family: Georgia;
			font-size: 14px;
			color: #666;
      h1 {
        font-style: normal;
        margin-bottom: 1em;
      }
      [disabled] {
        color: gray;
      }
    }
	}
}