@import "colors.scss";

#dashboard_controller {
  background: $background-gray;
}

.topmenu.topmenu-with-sub {
  margin-bottom: 0;
}
#dashboard_controller.body--beta .topmenu {
  padding: 0 calc(50% - 484px);
}

.dashboard-subnav {
  display: flex;
  background: $white;
  margin-bottom: 40px;
  height: 53px;
  position: fixed;
  top: 64px;
  left: 0;
  right: 0;
  z-index: 50;
  box-shadow: 0 0 10px $gray-2;

  a, a:visited {
    color: $pivot-dark-blue;
    display: inline-block;
    svg {
      fill: $pivot-dark-blue;
    }
    &.active {
      cursor: default;
      color: $pivot-bright-blue;
      svg {
        fill: $pivot-bright-blue;
      }
    }
  }

  .dashboard-edit-toggle {
    margin-left: 65px;
    height: 53px;
    svg {
      margin-top: 16px;
    }
  }

  .dashboard-mode-toggle, .dashboard-timeframe-toggle, .dashboard-edit-toggle {
    display: inline-block;
  }

  .dashboard-mode-toggle {
    font-size: 20px;
    width: 320px;
    a {
      padding: 0 13px;
    }
  }

  .dashboard-stats-icons {
    display: inline-flex;
    width:332px;
    justify-content: space-between;
    align-items: center;
    ng-md-icon {
      display: inline-block;
      width: 25px;
      margin-top: -3px;
    }
    svg {
      fill: $pivot-dark-blue;
    }
  }

  .dashboard-timeframe-toggle, .dashboard-edit-toggle {
    float: right;
    a {
      padding: 0 4px;
    }
  }

  .dashboard-edit-toggle {
    padding-left: 10px;
    padding-right: 10px;
  }

  .inner {
    display: flex;
    align-items: center;
  }
}

.dashboard_panels, .dashboard-subnav .inner {
  margin: 0 auto;
  width: 976px;
  font-family: "Titillium Web", sans-serif;
  color: $pivot-dark-blue;
  font-size: 14px;
  padding: 0 14px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

#dashboard_main {
  margin-top: 140px;
  min-height: calc(100vh - 140px /* root navigation */ - 43px /* footer */);
  display: inline-block;
  width: 100%;
}
