.stop-scrolling {
  height: 100%;
  overflow: hidden;
}

#label_menu {
  .greyborder_top {
    border-top: 1px solid #bbb;
  }
  .role_div_checkbox {
    cursor: pointer;
    padding: 6px 6px 4px;
    &:hover {
      background: #eee;
    }
  }
  #apply_roles_spinner {
    text-align: center;
    padding: 3px;
  }
  #apply_roles_successful {
    text-align: center;
    color: #0379AE;
    font-size: 11px;
    padding: 4px;
    background: #d3f3bb;
  }
  .role_actions {
    text-align: center;
    a.greybox {
      background:#fff;
      border:1px solid #bbbbbb;
      margin:3px 4px 10px;
      padding:0 8px;
      border-radius: 5px;
      display: inline-block;
      -moz-border-radius: 5px;
      -webkit-border-radius: 5px;
      -khtml-border-radius: 5px;
    }
    a.greybox:hover {
    	background: #eaf1f6;
    	border-color: #0379ae;
    }
  }
}

td {
  div.roles_spaces {
    display: block;
  }
  .role_label {
    background: #EAF1F6;
    font-size: 10px;
    padding: 3px 5px;
    display: inline-block;
    margin: 1px 0;
    cursor: default;
  }
  .role_label_archived {
    background: #C5DA6E;
    font-size: 10px;
    padding: 3px 5px;
    display: inline-block;
    margin: 1px 0;
    cursor: default;
  }
  .transferred {
    background: #C8D0D4;
  }
}

#menu a.greybox {
  background:#F4F4F4;
  border:1px solid #bbbbbb;
  margin:10px 4px 0px 0;
  padding:0 8px;
  border-radius: 5px;
  display: inline-block;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  -khtml-border-radius: 5px;
}

#menu li a.greybox:hover {
  background:#ffffff;
  border:1px solid #aaaaaa;
}

#menu #apply_roles_spinner {
  float: left;
  margin: 9px 2px 0;
}

#menu #apply_roles_successful {
  clear: both;
  color: #0379AE;
  font-size: 11px;
  padding: 4px;
  background: #d3f3bb;
}

#menu .col_1 {
  display:block;
  margin: 0 5px;
  position: relative;
}

#menu .dropdown_1column {
  background: #F4F4F4;
  background: -moz-linear-gradient(top, #F4F4F4, #EEEEEE);
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#F4F4F4), to(#EEEEEE));
  border:1px solid #777777;
  left:-999em; /* Hides the drop down */
  margin:1px auto;
  padding:10px 5px 10px 5px;
  position:absolute;
  text-align:left;
  -moz-border-radius: 0px 5px 5px 5px;
  -webkit-border-radius: 0px 5px 5px 5px;
  border-radius: 0px 5px 5px 5px;
}

#menu .greyborder_top {
  border-top:1px solid #bbb;
  margin: 10px 8px 0;
}

#menu .greyborder_top a:hover,
#menu .role_div_checkbox:hover {
  background:#ffffff;
}

#menu .role_div_checkbox {
  cursor: pointer;
  margin: 0 -10px;
  padding: 6px 0 4px;
}

#menu .role_div_checkbox span {
  margin: 0 10px;
}

.ui-autocomplete {
  max-height: 250px;
  overflow-y: auto;
  /* prevent horizontal scrollbar */
  overflow-x: hidden;
  /* add padding to account for vertical scrollbar */
}
  /* IE 6 doesn't support max-height
   * we use height instead, but this forces the menu to always be this tall
   */
  * html .ui-autocomplete {
    height: 250px;
}

.ui-autocomplete-loading {
  background: #ffffff url('/assets/images/ui-anim_basic_16x16.gif') 99% center no-repeat !important;
}

ul.ui-autocomplete li a {
}
ul.ui-autocomplete li img {
  clear: both;
  float: left;
  margin-right: 10px;
}

ul.ui-autocomplete li:last-child img, ul.ui-autocomplete li:last-child span {
  display: none;
}

.fb_results {
  ul {
    margin: 0;
    padding: 0;
    display: block;
    li:hover {
      box-shadow: 0 0 4px #999;
    }
    li {
      list-style-type: none;
      border: 1px solid #CCC;
      border-radius: 5px;
      margin: 0px 5px 5px 0px;
      padding: 5px;
      min-height: 50px;
      text-align: left;
      width: 231px;
      float: left;
      border-image: initial;
      img {
        display: block;
        margin: auto;
        float: left;
      }
      .meta {
        margin-left: 60px;
        color: #555;
        .fbname {color: #0379AE; display: block; font-weight: bold;}
      }
      a {
        margin: auto;
        display: block;
        cursor: pointer;
      }
      a:hover {text-decoration: none;}
    }
  }
}

ul.ui-autocomplete {
	margin: 0;
	padding: 0;
	max-width: 296px;
	list-style: none;
	border-radius: 0;
	-moz-border-radius: 0;

	li {
		padding: 5px;
		border-bottom: 1px solid #ddd;
		overflow: hidden;

		img {
			display: block;
			width: 50px;
			height: 50px;
		}

		a {
			color: #0379ae;
	    cursor: pointer;
			&:hover {
			  font-weight: normal;
			}
		}
	}

	#ui-active-menuitem {
	  background: none;
	  border: none;
	}

	.ui-menu-item .email {
	  color: #aaa;
	}

	.ui-menu-item .fb_img {
	  width: 50px;
	  height: 50px;
	  display: inline-block;
	}
}

#person_info {
  .title {
    font-size: 14px;
    font-weight: bold;
    display: inline-block;
  }
  .assigned_labels {
    display: inline-block;
    .assigned_label {
      background: #EAF1F6;
      font-size: 10px;
      padding: 3px 5px 2px;
    }
  }
}


#labels_dialog {
  .title {
    font-size: 16px;
    padding: 10px 0px;
  }
  .labels_list {
    border: 1px solid #CCC;
    height: 260px;
    overflow-x: hidden;
    overflow-y: scroll;
    margin: 7px;
    .label_item {
      border-bottom: 1px solid #CCC;
      padding: 4px;
      background: #FCFCFC;
    }
  }
  .actions {
    text-align: center;
  }
}

.person_headerlink {
  background: white;
  font-weight: normal;
  border: 1px solid silver;
  border-radius: 3px 3px 3px 3px;
  -moz-border-radius: 3px 3px 3px 3px;
  -webkit-border-radius: 3px 3px 3px 3px;
  display: inline-block;
  padding: 4px 8px;
}
