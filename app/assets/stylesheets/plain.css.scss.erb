/* PLAIN */

.plain {
	width: 960px;
	font-size: 13px;
	padding-top: 20px !important;
	margin-bottom: 20px !important;
}

ul.jqm {
	list-style: none;
	margin: 0;
	padding: 0;
}

div.field {
	label {
		font-size: 14px;
		font-weight: bold;
		display: block;
	}
	label.choice {
		font-size: 13px;
		font-weight: normal;
	}
	input[type=text] {
		border: 1px solid gray;
    box-shadow: 0 0 2px #999999 inset;
    font-family: arial;
    font-size: 12px;
    padding: 5px;
    width: 215px;
	}
}
div.field_with_errors {
	input[type=text] {
		border: 2px solid red;
  }
}

#logo {
	display: inline-block;
	height: 41px;
	margin-bottom: 10px;
	width: 166px;
}

#plainheader {
	border-bottom: 3px solid silver;
	margin-bottom: 20px;
}

.footer {
	border-top: 3px solid silver;
	margin-top: 20px;
	padding-top: 10px;
	text-align: right;

}

