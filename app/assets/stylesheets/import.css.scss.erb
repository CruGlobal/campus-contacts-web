.manage_labels {
	width: 325px;
	padding: 15px;
}
.label_space {
	height: 230px;
	width: 300px;
}
.label_list {
	border: 1px solid #CCC;
	height: 230px;
	width: 300px;
	overflow-x: hidden;
	overflow-y: scroll;
	margin: 10px 10px 4px;
}
.label_new {
	width: 300px;
	margin: 5px 10px 10px;
	#new_label_field {
		width: 178px;
		padding: 6px 3px;
		background: #fefefe;
		&.loading {
			background: #fefefe url(loader.gif) no-repeat 99%;
		}
	}
	#new_label_button {
		width: 90px;
	}
	#new_label_message {
		text-align: center;
		height: 24px;
		margin-top: 3px;
		color: #900;
		font-weight: bold;
	}
	#new_label_loader {
		height: 24px;
		text-align: center;
	}
}
.label_item {
	border-bottom: 1px solid #CCC;
	padding: 4px;
	background: #FCFCFC;
}
.import_label {
	width: 90px;
	display: inline-block;
}
.import_field {
	display: inline-block;
}
.import_header {
	height: 60px;
	.import_step {
		width: 60px;
		float: left;
		img {
			width: 50px;
			height: 50px;
		}
	}
	.import_info  {
		float: left;
		margin-top: 14px;
		font-family: Tahoma, Arial;
		color: #333;
		font-size: 21px;
		font-weight: bold;
	}
}
.stepwrap {
	min-height: 30px;
}

#import_container {
	margin: 0 auto;
	width: 790px;
	
  #import_upload {
    width: 300px;
  }

	.inside_container {
		margin: 0 auto;
		width: 620px;
	}

	select {
		/*display: none;*/
		width: 245px;
	}

	h1.title {
		float: left;
		font-family: Georgia;
		font-size: 24px;
		font-style: italic;
		font-weight: normal;
		color: #808284;
	}
	
	.helpme {
		margin: 0;
		padding: 0.5em 1em;
		display: inline-block;
		background: #fff2a2;
		border: 1px solid #ffeb74;
		-moz-border-radius: 4px;
		border-radius: 4px;
		font-weight: bold;
		color: #222;
	}
	
	.bottom_area {
	  padding: 0px 5px;
	  text-align: right;
	  margin-top: 10px;
	  .sub_info {
	    display: inline-block;
  		font-family: Georgia;
			font-size: 12px;
			font-style: italic;
			font-weight: normal;
			color: #808284;
			margin-top: 3px;
	  }
	}
	
	.helpme:hover {
		text-decoration: none;
		background: #ffeb74;
	}
	
	.helpme:active {
		background: #fff2a2;
	}

	.container {
		clear: both;
		border: 1px solid #eaf1f6;
		border-top: 25px solid #eaf1f6;
		
		.content {
			padding: 25px 50px;
			font-family: Georgia;
			font-size: 14px;
			font-style: italic;
			color: #808284;
			
			ol {
				margin: 2em 0;
				font-size: 12px;
			}	
		}
		
		table {
			table-layout: fixed;
			width: 100%;
			text-align: left;
			
			th, td {
				padding: 5px 15px;
				vertical-align: middle;
				overflow: hidden;
				white-space: nowrap;
			}
			
			th:last-child, td:last-child {
				width: 50%;
			}
			
			th:first-child, td:first-child {
				width: 80px;
			}
			
			tr:first-child {
				background: #eaf1f6;
			}
			
			tr {
				border-bottom: 1px solid #eaf1f6;
			}
			
			.matchEdit {
				display: none;
				float: right;
				padding-top: 0.25em;
			}
			
			.matchSelect {
				float: left;
				width: 230px;
				height: 22px;
				background-color: #fff;
				background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#eaf1f6), to(#fff));
				background-image: -webkit-linear-gradient(top, #eaf1f6, #fff);
				background-image: -moz-linear-gradient(top, #eaf1f6, #fff);
				background-image: -ms-linear-gradient(top, #eaf1f6, #fff);
				background-image: -o-linear-gradient(top, #eaf1f6, #fff);
				
				.selectTitleBg {
					display: block;
					padding: 0.25em 2.9em 0.25em 1em;
					background: url('<%= asset_path('selectbox.png') %>') no-repeat right;
					border: 1px solid #c7dff0;
					cursor: default;
				
					.selectTitle {
						display: block;
						overflow: hidden;
						white-space: nowrap;
						color: #808284;
					}
					
				}
				
				.selectQuestions {
					position: absolute;
					margin-top: 0;
					margin-left: -241px;
					padding: 1em;
					width: 445px;
					max-height: 245px;
					overflow-y: scroll;
					background: #fff;
					border: 1px solid #c7dff0;
					
					.noMatch {
						margin: 0 0 1em 0;
						cursor: default;
					
						height: 20px;
						line-height: 20px;
						
						span {
							padding: 0.45em 0;
						}
						
						.none {
							padding: 0.2em 0.6em;
							margin-right: 0.25em;
							background: #808284;
							color: #fff;
							font-weight: bold;
						}
					
					}
					
					.noMatch:hover {
						background: #c7dff0;
					}
					
						.surveyQuestions {
							list-style: none;
							margin: 0 0 1em 0;
							padding: 0;
							cursor: default;
							
								.surveyHeader {
									color: #808284;
									font-weight: bold;
								}
								
								li {
									padding:  0.25em 1em;
								}
								
								li:hover {
									background: #c7dff0;
								}
								
						}
					
					.newQuestion {
						cursor: default;						
					
						height: 20px;
						line-height: 20px;
						
						span {
							padding: 0.45em 0;
						}
						
						.plus {
							padding: 0.2em 0.45em;
							margin-right: 0.25em;
							background: #808284;
							color: #fff;
							font-weight: bold;
						}
					
					}
					
					.newQuestion:hover {
						background: #c7dff0;
					}
						
				}
				
			}
		}
		
		.importform {
			overflow: hidden;
			padding: 0.8em;
			background: #eaf1f6;
			
			input[type="file"] {
				float: left;
				padding: 0.5em;
				background: #fff;
			}
			
			input[type="submit"] {
				float: right;
				background: #fff;
				border-radius: 4px;
				border: 1px solid #808284;
			}
			
			input[type="submit"]:hover {
				background: #c7dff0;
				border-color: #0379ae;
			}
			
			.cancel {
				float: right;
				margin: 2px 5px 2px 0;
				padding: 7px 0;
				display: block;
				width: 150px;
				background: #fff;
				text-align: center;
				color: #222;
				border-radius: 4px;
				border: 1px solid #808284;
				font: bold 11px "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
			}
			
			.cancel:hover {
				text-decoration: none;
				background: #c7dff0;
				border-color: #0379ae;
			}
		}
		
		#new_label_button {
			background: #fff;
			border-radius: 4px;
			border: 1px solid #808284;
		}
		
		#new_label_button:hover {
			background: #c7dff0;
			border-color: #0379ae;
		}
		
		.labelform {
			margin: 0 1em;
			padding: 1em;
			border-top: 1px solid #808284;
		}
	}
}

#new_question_form {
	.info_header {
		padding-bottom: 10px;
		font-size: 14px;
		border-bottom: 1px solid #808284;
	}
	.info_content {
		padding: 20px 0 20px 25px;
	}
	.question {
		float: left;
	}
	.preview {
		float: right;
		width: 40%;
	}
}

#import_survey_question {
  #import_error_message {
    color: #990000;
    text-align: center;
    font-family: Georgia;
    font-size: 13px;
  }
  #survey_header {
    font-size: 16px;
    padding: 5px;
    font-family: Georgia;
    font-size: 16px;
    font-weight: bold;
    font-style: italic;
    color: #707073;
    border-bottom: 1px solid #ccc;
  }
  #survey_content{
    padding: 5px;
    font-family: Georgia;
    font-size: 12px;
    font-style: italic;
    color: #808284;
    #new_survey, #old_survey {
      text-align: center;
    }
    #survey_question_set {
      display: none;
      #question {
        margin: 10px 0 0 10px;
        #question_options_field {
          height: 50px;
        }
      }
      #preview {
        width: 220px;
        margin: 10px 10px 0 0;
        float: right;
      }
    }
  }
}