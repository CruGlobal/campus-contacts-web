/*** adding the class mh-top in addition to sf-menu creates an all-horizontal nav-bar menu ***/

.mh-top {
	/*background:		url("<%= asset_path("topmenubgtall.png") %>") repeat-x 0 0 #eaf1f6;*/
	height:			88px;
	padding-bottom:	0em;
	position:		relative;
	float: 			left;
	border-radius: 	0;
	font-family: 	Tahoma, Arial;
	font-size: 		12px;
	margin-bottom: 	0px;
	z-index: 		2;
}
.mh-top li {
	background: none;
	position:		static;
	border: none;
	height: 64px;
	line-height: 64px;
	font-size: 12px;
}

.mh-top li:first-child {
  margin-left: 32px;
}

