#roles_controller {
  .inside_container {
		margin: 0 auto;
		width: 630px;

		.container {
			clear: both;
			border: 1px solid #eaf1f6;

			.content {
				padding: 25px 40px;
				font-family: Georgia;
				font-size: 14px;
				font-style: italic;
				color: #808284;

				ol {
					margin: 10px 0 20px;
					font-size: 12px;
				}

				.preview_link {
					text-align: center;
				}
			}

			table {
				table-layout: fixed;
				width: 100%;
				text-align: left;

				th, td {
					padding: 5px 15px;
					vertical-align: middle;
					overflow: hidden;
					white-space: nowrap;
				}

				tr {
					border-bottom: 1px solid #eaf1f6;
				}

				.controls {
				  width: 30px;
				}
			}
    }
  	h1.title {
  		float: left;
  		font-family: Georgia;
  		font-size: 24px;
  		font-style: italic;
  		font-weight: normal;
  		color: #808284;
  	}
 		.create_label_button {
			float: right;
			margin: 15px 0 0 0;
			padding: 7px 0;
			display: block;
			width: 150px;
			background: #fff;
			text-align: center;
			color: #222;
			border-radius: 4px;
			border: 1px solid #808284;
			font: bold 11px "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
			&:hover {
				text-decoration: none;
				background: #c7dff0;
				border-color: #0379ae;
			}
		}

  }

}