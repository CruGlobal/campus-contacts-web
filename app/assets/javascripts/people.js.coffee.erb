update_persons_roles = () ->
  role_ids = []
  some_role_ids = []

  $('#apply_roles_spinner').show()
  $("#apply_roles_successful").hide()
  $('#label_menu').live 'mouseleave', -> #Hook to avoid using the plugin, hiding the box while in process
  	$(this).show()
  $('.role_id_checkbox:checked').each ->
    role_id = $(this).val()
    role_ids.push(role_id)
    #if $(this).is ':enabled' #added for MH 299
    #  role_id = $(this).val()
    #  role_ids.push(role_id)
  $('.role_id_checkbox:not(:enabled)').each ->
    some_role_ids.push($(this).val())

  checked_elements = $('.id_checkbox:checked')
  total_contacts = checked_elements.length
  success_apply_counter = 0
  fail_apply_counter = 0

  checked_elements.each ->
    person_id = $(this).val()
    $.ajax
      type: 'POST',
      url: '/people/update_roles',
      data: 'role_ids='+role_ids+'&some_role_ids='+some_role_ids+'&person_id='+person_id,
      success: (data) ->
        roles_user = "#roles_user_" + person_id
        $("#apply_roles_successful").show()
        if data.indexOf("$.a") == -1
          success_apply_counter++
          $(roles_user).html data
        else
          fail_apply_counter++
        html = success_apply_counter+" out of "+total_contacts+" contacts "+t('general.roles_applied')
        $("#apply_roles_successful").html(html)
        total_apply = success_apply_counter + fail_apply_counter;
        if total_apply == total_contacts
          $('#label_menu').live 'mouseleave', -> #Return the original effects of the box
            $('#label_menu').hide()
          $("#apply_roles_spinner").hide()
          $('#label_menu').hide()
