  $('input.id_checkbox:checked').each ->
    if $(this).hasClass('not_displayed')
      change_role_checkboxes_by_ids($(this).attr('data-roles'), check)
    else
      role_labels = get_role_labels($(this))
      change_role_checkboxes(role_labels, check)

